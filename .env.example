# ============================================
# AnKhangCRM Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# ============================================

# Database
DB_HOST=db
DB_USER=root
DB_PASSWORD=password

# Redis
REDIS_URL=redis://redis:6379/0

# Rails
RAILS_ENV=development
SECRET_KEY_BASE=your_secret_key_here

# Sidekiq (optional)
# SIDEKIQ_CONCURRENCY=5

# Web Push VAPID Keys (required for push notifications)
# Generate with: bundle exec ruby -e "require 'web-push'; key = WebPush.generate_key; puts 'VAPID_PUBLIC_KEY=' + key.public_key; puts 'VAPID_PRIVATE_KEY=' + key.private_key"
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:admin@ankhang.com
