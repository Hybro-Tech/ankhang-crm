<%# TASK-REGION: Region form partial - UI/UX ProMax %>
<%= form_with model: @region, local: true, class: "space-y-6" do |f| %>
  <% if @region.errors.any? %>
    <div class="p-4 bg-red-50 border-l-4 border-red-500 rounded-r-lg">
      <div class="flex items-center text-red-800">
        <i class="fa-solid fa-exclamation-triangle mr-2"></i>
        <span class="font-semibold">Có <%= @region.errors.count %> lỗi cần sửa:</span>
      </div>
      <ul class="mt-2 text-sm text-red-700 list-disc list-inside ml-6">
        <% @region.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Main form card %>
  <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
    <div class="bg-gradient-to-r from-gray-50 to-white px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 flex items-center">
        <i class="fa-solid fa-map-location-dot text-brand-blue mr-2"></i>
        Thông tin vùng/miền
      </h3>
    </div>
    
    <div class="p-6">
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <%# Name %>
        <div>
          <%= f.label :name, t("regions.fields.name") + " *", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fa-solid fa-tag text-gray-400"></i>
            </div>
            <%= f.text_field :name, 
                class: "block w-full border border-gray-300 rounded-lg py-2.5 pl-10 pr-3 focus:outline-none focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors", 
                placeholder: "VD: Bắc, Trung, Nam" %>
          </div>
        </div>

        <%# Code %>
        <div>
          <%= f.label :code, t("regions.fields.code") + " *", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fa-solid fa-code text-gray-400"></i>
            </div>
            <%= f.text_field :code, 
                class: "block w-full border border-gray-300 rounded-lg py-2.5 pl-10 pr-3 focus:outline-none focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors font-mono", 
                placeholder: "VD: bac, trung, nam" %>
          </div>
          <p class="mt-1.5 text-xs text-gray-500 flex items-center">
            <i class="fa-solid fa-info-circle mr-1"></i>
            Chỉ cho phép chữ thường và dấu gạch dưới
          </p>
        </div>

        <%# Position %>
        <div>
          <%= f.label :position, t("regions.fields.position"), class: "block text-sm font-medium text-gray-700 mb-1.5" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fa-solid fa-sort text-gray-400"></i>
            </div>
            <%= f.number_field :position, 
                class: "block w-full border border-gray-300 rounded-lg py-2.5 pl-10 pr-3 focus:outline-none focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors", 
                min: 0 %>
          </div>
          <p class="mt-1.5 text-xs text-gray-500">Số nhỏ hơn sẽ hiển thị trước</p>
        </div>

        <%# Active %>
        <div class="flex items-center pt-8">
          <div class="flex items-center h-5">
            <%= f.check_box :active, class: "h-5 w-5 text-brand-blue focus:ring-brand-blue border-gray-300 rounded cursor-pointer" %>
          </div>
          <div class="ml-3">
            <%= f.label :active, t("regions.fields.active"), class: "text-sm font-medium text-gray-900 cursor-pointer" %>
            <p class="text-xs text-gray-500">Bỏ chọn để ẩn vùng/miền khỏi dropdown</p>
          </div>
        </div>
      </div>

      <%# Description %>
      <div class="mt-6">
        <%= f.label :description, t("regions.fields.description"), class: "block text-sm font-medium text-gray-700 mb-1.5" %>
        <div class="relative">
          <div class="absolute top-3 left-3 pointer-events-none">
            <i class="fa-solid fa-align-left text-gray-400"></i>
          </div>
          <%= f.text_area :description, 
              rows: 3, 
              class: "block w-full border border-gray-300 rounded-lg py-2.5 pl-10 pr-3 focus:outline-none focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors resize-none", 
              placeholder: "Mô tả thêm về vùng/miền này (tùy chọn)" %>
        </div>
      </div>
    </div>
  </div>

  <%# Actions %>
  <div class="flex items-center justify-center gap-4 pt-2">
    <%= link_to regions_path, class: "inline-flex items-center px-6 py-2.5 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 font-medium transition-colors" do %>
      <i class="fa-solid fa-times mr-2"></i>
      Hủy bỏ
    <% end %>
    <button type="submit" class="inline-flex items-center px-8 py-2.5 bg-brand-blue text-white rounded-lg hover:bg-blue-900 font-medium shadow-lg shadow-blue-500/30 transition-all cursor-pointer">
      <i class="fa-solid fa-save mr-2"></i>
      <%= @region.new_record? ? "Tạo vùng/miền" : "Lưu thay đổi" %>
    </button>
  </div>
<% end %>
