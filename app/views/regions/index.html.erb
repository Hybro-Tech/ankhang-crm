<%# TASK-REGION: Region management index page %>
<div class="flex flex-col gap-6">
  <%# Header %>
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-900"><%= t("regions.title") %></h1>
      <p class="text-sm text-gray-500 mt-1">Quản lý danh sách vùng/miền cho hệ thống</p>
    </div>
    <%= link_to new_region_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-brand-blue hover:bg-blue-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-blue" do %>
      <i class="fa-solid fa-plus mr-2"></i>
      <%= t("regions.new") %>
    <% end %>
  </div>

  <%# Regions Table %>
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("regions.fields.position") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("regions.fields.name") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("regions.fields.code") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("regions.fields.users_count") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("regions.fields.active") %>
          </th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            Hành động
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @regions.each do |region| %>
          <tr class="<%= region.active? ? '' : 'bg-gray-50 opacity-60' %>">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= region.position %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= region.name %></div>
              <% if region.description.present? %>
                <div class="text-sm text-gray-500"><%= truncate(region.description, length: 50) %></div>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-mono rounded bg-gray-100 text-gray-800">
                <%= region.code %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <span class="font-medium"><%= region.users.count %></span> nhân viên
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if region.active? %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Hoạt động
                </span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                  Ngừng hoạt động
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <div class="flex justify-end gap-2">
                <%= link_to edit_region_path(region), class: "text-brand-blue hover:text-blue-900" do %>
                  <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
                
                <%= button_to toggle_active_region_path(region), method: :patch, 
                              class: "text-yellow-600 hover:text-yellow-800",
                              form: { data: { turbo_confirm: region.active? ? "Ngừng hoạt động vùng/miền này?" : "Kích hoạt lại vùng/miền này?" } } do %>
                  <i class="fa-solid fa-<%= region.active? ? 'toggle-on' : 'toggle-off' %>"></i>
                <% end %>
                
                <% unless region.users.exists? %>
                  <%= button_to region_path(region), method: :delete,
                                class: "text-red-600 hover:text-red-900",
                                form: { data: { turbo_confirm: t("confirm_dialog.delete_message") } } do %>
                    <i class="fa-solid fa-trash"></i>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
        <% if @regions.empty? %>
          <tr>
            <td colspan="6" class="px-6 py-10 text-center text-gray-500">
              <i class="fa-solid fa-map-location-dot text-4xl text-gray-300 mb-3"></i>
              <p>Chưa có vùng/miền nào. Hãy thêm vùng/miền đầu tiên.</p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <%# Pagination %>
    <%= render "shared/pagination", collection: @regions, entry_name: "vùng/miền" %>
  </div>
</div>
