<%# Custom Solid Cache Monitoring Dashboard %>
<%# Provides visibility into cache performance with management actions %>

<div class="bg-gray-50 min-h-screen py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <%# Flash Messages %>
    <% if flash[:notice] %>
      <div class="mb-4 p-4 bg-green-50 border border-green-200 rounded-lg flex items-center">
        <i class="fa-solid fa-check-circle text-green-600 mr-2"></i>
        <span class="text-green-800"><%= flash[:notice] %></span>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg flex items-center">
        <i class="fa-solid fa-exclamation-circle text-red-600 mr-2"></i>
        <span class="text-red-800"><%= flash[:alert] %></span>
      </div>
    <% end %>

    <%# Header with Actions %>
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Solid Cache Monitor</h1>
        <p class="mt-1 text-sm text-gray-500">Database-backed cache monitoring và management</p>
      </div>
      <div class="mt-4 sm:mt-0 flex flex-wrap gap-2">
        <%= link_to admin_solid_cache_path, 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 shadow-sm",
            data: { turbo_frame: "_top" } do %>
          <i class="fa-solid fa-rotate mr-2"></i> Làm mới
        <% end %>
        
        <% if @stats[:entries_last_24h] > 0 %>
          <%= button_to clear_old_admin_solid_cache_path, 
              method: :delete,
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 shadow-sm",
              data: { turbo_confirm: "Xóa cache entries cũ hơn 24 giờ?" } do %>
            <i class="fa-solid fa-clock-rotate-left mr-2"></i> Xóa cache cũ
          <% end %>
        <% end %>
        
        <% if @stats[:total_entries] > 0 %>
          <%= button_to clear_all_admin_solid_cache_path, 
              method: :delete,
              class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 shadow-sm",
              data: { turbo_confirm: "⚠️ Xóa TẤT CẢ #{@stats[:total_entries]} cache entries? Có thể ảnh hưởng hiệu năng app!" } do %>
            <i class="fa-solid fa-trash mr-2"></i> Xóa tất cả
          <% end %>
        <% end %>
      </div>
    </div>

    <%# KPI Cards %>
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
      <%# Total Entries %>
      <div class="bg-white overflow-hidden shadow-sm rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-blue-50 rounded-md p-3">
              <i class="fa-solid fa-database text-brand-blue text-xl"></i>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Tổng Entries</dt>
                <dd>
                  <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@stats[:total_entries]) %></div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <%# Total Size %>
      <div class="bg-white overflow-hidden shadow-sm rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-green-50 rounded-md p-3">
              <i class="fa-solid fa-hard-drive text-green-600 text-xl"></i>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Tổng Size</dt>
                <dd>
                  <div class="text-2xl font-bold text-gray-900"><%= @stats[:total_size] %></div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <%# Last Hour %>
      <div class="bg-white overflow-hidden shadow-sm rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-orange-50 rounded-md p-3">
              <i class="fa-solid fa-clock text-brand-orange text-xl"></i>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">1 giờ qua</dt>
                <dd>
                  <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@stats[:entries_last_hour]) %></div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <%# Last 24h %>
      <div class="bg-white overflow-hidden shadow-sm rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-purple-50 rounded-md p-3">
              <i class="fa-solid fa-calendar-day text-purple-600 text-xl"></i>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">24 giờ qua</dt>
                <dd>
                  <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@stats[:entries_last_24h]) %></div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%# Content Grid %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
      <%# Chart Section %>
      <div class="bg-white shadow-sm rounded-xl border border-gray-100 p-6 lg:col-span-2">
        <h3 class="text-lg leading-6 font-semibold text-gray-900 mb-4">Cache entries theo giờ (24h)</h3>
        <div class="h-72">
          <% if @entries_by_hour.present? %>
            <%= line_chart @entries_by_hour, 
                colors: ["#10B981"],
                library: {
                  plugins: { legend: { display: false } },
                  scales: { 
                    y: { beginAtZero: true },
                    x: { grid: { display: false } }
                  }
                } %>
          <% else %>
            <div class="flex items-center justify-center h-full text-gray-400">
              <div class="text-center">
                <i class="fa-solid fa-chart-line text-4xl mb-2"></i>
                <p>Không có dữ liệu</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <%# Time Info %>
      <div class="bg-white shadow-sm rounded-xl border border-gray-100 p-6">
        <h3 class="text-lg leading-6 font-semibold text-gray-900 mb-4">Thông tin Cache</h3>
        <div class="space-y-4">
          <div class="flex justify-between items-center py-3 border-b border-gray-100">
            <span class="text-sm text-gray-500">Entry cũ nhất</span>
            <span class="text-sm font-medium text-gray-900">
              <%= @stats[:oldest_entry] ? l(@stats[:oldest_entry], format: :short) : "N/A" %>
            </span>
          </div>
          <div class="flex justify-between items-center py-3 border-b border-gray-100">
            <span class="text-sm text-gray-500">Entry mới nhất</span>
            <span class="text-sm font-medium text-gray-900">
              <%= @stats[:newest_entry] ? l(@stats[:newest_entry], format: :short) : "N/A" %>
            </span>
          </div>
          <div class="flex justify-between items-center py-3">
            <span class="text-sm text-gray-500">Thời gian hiện tại</span>
            <span class="text-sm font-medium text-gray-900">
              <%= l(Time.current, format: :short) %>
            </span>
          </div>
        </div>
      </div>
    </div>

    <%# Recent Entries Table %>
    <div class="bg-white shadow-sm rounded-xl border border-gray-100 overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-100">
        <h3 class="text-lg leading-6 font-semibold text-gray-900">Recent Cache Entries</h3>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Key Hash
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Size
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Created
              </th>
              <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @recent_entries.any? %>
              <% @recent_entries.each do |entry| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-8 w-8 bg-blue-100 rounded-full flex items-center justify-center">
                        <i class="fa-solid fa-key text-brand-blue text-sm"></i>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-mono text-gray-900"><%= truncate(entry.key_hash.to_s, length: 24) %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      <%= number_to_human_size(entry.size_bytes || 0) %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= time_ago_in_words(entry.created_at) %> trước
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <%= button_to delete_entry_admin_solid_cache_path(id: entry.key_hash), 
                        method: :delete,
                        class: "p-1 text-red-600 hover:text-red-800 hover:bg-red-50 rounded",
                        title: "Xóa entry",
                        data: { turbo_confirm: "Xóa cache entry này?" } do %>
                      <i class="fa-solid fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="4" class="px-6 py-12 text-center text-gray-400">
                  <i class="fa-solid fa-inbox text-4xl mb-2"></i>
                  <p>Cache trống</p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
