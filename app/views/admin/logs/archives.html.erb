<%# TASK-LOGGING: Archives View %>
<div class="flex items-center justify-between mb-6">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Log Archives</h1>
    <p class="text-sm text-gray-500 mt-1">Dữ liệu lịch sử đã được archive</p>
  </div>
  <div class="flex items-center space-x-3">
    <%= link_to admin_logs_path, class: "bg-gray-100 text-gray-600 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 flex items-center cursor-pointer transition-colors duration-200" do %>
      <i class="fa-solid fa-list-check mr-2"></i> Activity Logs
    <% end %>
    <%= link_to events_admin_logs_path, class: "bg-gray-100 text-gray-600 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 flex items-center cursor-pointer transition-colors duration-200" do %>
      <i class="fa-solid fa-globe mr-2"></i> User Events
    <% end %>
  </div>
</div>

<%# Stats Cards %>
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-blue-100 text-brand-blue">
        <i class="fa-solid fa-list-check text-xl"></i>
      </div>
      <div class="ml-4">
        <p class="text-sm text-gray-500">Activity Logs Archive</p>
        <p class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@activity_archives_count) %></p>
        <p class="text-xs text-gray-400 mt-1">Logs > 6 tháng</p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-green-100 text-green-600">
        <i class="fa-solid fa-globe text-xl"></i>
      </div>
      <div class="ml-4">
        <p class="text-sm text-gray-500">User Events Archive</p>
        <p class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@event_archives_count) %></p>
        <p class="text-xs text-gray-400 mt-1">Events > 90 ngày</p>
      </div>
    </div>
  </div>
</div>

<%# Recent Archives %>
<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-100">
    <h3 class="font-semibold text-gray-900">Activity Logs Archive (Recent)</h3>
  </div>
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Original Date</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">User</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Action</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Subject</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Archived At</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @activity_archives.each do |log| %>
        <tr class="hover:bg-gray-50 transition-colors duration-150">
          <td class="px-4 py-3 whitespace-nowrap text-xs text-gray-500">
            <%= log.original_created_at.strftime("%d/%m/%Y %H:%M") %>
          </td>
          <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
            <%= log.user_name || "Hệ thống" %>
          </td>
          <td class="px-4 py-3 whitespace-nowrap">
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
              <%= log.action %>
            </span>
          </td>
          <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600">
            <%= "#{log.subject_type}##{log.subject_id}" if log.subject_type %>
          </td>
          <td class="px-4 py-3 whitespace-nowrap text-xs text-gray-400">
            <%= log.created_at.strftime("%d/%m/%Y") %>
          </td>
        </tr>
      <% end %>
      <% if @activity_archives.empty? %>
        <tr>
          <td colspan="5" class="px-4 py-8 text-center text-gray-500">
            Chưa có dữ liệu archive
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%# Pagination %>
<div class="mt-4">
  <%= paginate @activity_archives %>
</div>
