<%# TASK-053: Admin System Settings Page %>
<div class="max-w-4xl mx-auto py-8">
  <%# Header %>
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900 flex items-center gap-3">
      <i class="fa-solid fa-gear text-brand-blue"></i>
      Cài đặt hệ thống
    </h1>
    <p class="mt-2 text-gray-600">Cấu hình các thông số chung cho hệ thống</p>
  </div>

  <%= form_with url: admin_settings_path, method: :patch, local: true, class: "space-y-8" do |f| %>
    <%# Working Hours Section %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 bg-brand-blue">
        <h2 class="text-lg font-semibold text-white flex items-center gap-2">
          <i class="fa-solid fa-clock"></i>
          Giờ làm việc
        </h2>
        <p class="text-white text-sm mt-1">Cấu hình giờ làm việc của công ty</p>
      </div>
      
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <%# Start Time %>
          <div>
            <label for="settings_working_hours_start" class="block text-sm font-medium text-gray-700 mb-1">
              <i class="fa-regular fa-clock text-gray-400 mr-1"></i>
              Giờ bắt đầu
            </label>
            <input type="time" 
                   name="settings[working_hours_start]" 
                   id="settings_working_hours_start"
                   value="<%= @settings.find { |s| s[:key] == 'working_hours_start' }&.dig(:value) %>"
                   class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors">
            <p class="mt-1 text-xs text-gray-500">Áp dụng T2 - T6</p>
          </div>

          <%# End Time %>
          <div>
            <label for="settings_working_hours_end" class="block text-sm font-medium text-gray-700 mb-1">
              <i class="fa-regular fa-clock text-gray-400 mr-1"></i>
              Giờ kết thúc (T2-T6)
            </label>
            <input type="time" 
                   name="settings[working_hours_end]" 
                   id="settings_working_hours_end"
                   value="<%= @settings.find { |s| s[:key] == 'working_hours_end' }&.dig(:value) %>"
                   class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors">
            <p class="mt-1 text-xs text-gray-500">Thời gian kết thúc ngày thường</p>
          </div>

          <%# Saturday End %>
          <div>
            <label for="settings_saturday_hours_end" class="block text-sm font-medium text-gray-700 mb-1">
              <i class="fa-regular fa-calendar text-gray-400 mr-1"></i>
              Giờ kết thúc Thứ 7
            </label>
            <input type="time" 
                   name="settings[saturday_hours_end]" 
                   id="settings_saturday_hours_end"
                   value="<%= @settings.find { |s| s[:key] == 'saturday_hours_end' }&.dig(:value) %>"
                   class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors">
            <p class="mt-1 text-xs text-gray-500">Thứ 7 kết thúc sớm hơn</p>
          </div>
        </div>
      </div>
    </div>

    <%# Timezone Section %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="px-6 py-4" style="background-color: #0B387A;">
        <h2 class="text-lg font-semibold text-white flex items-center gap-2">
          <i class="fa-solid fa-globe"></i>
          Múi giờ
        </h2>
        <p class="text-white text-sm mt-1">Cấu hình múi giờ hệ thống</p>
      </div>
      
      <div class="p-6">
        <div class="max-w-md">
          <label for="settings_timezone" class="block text-sm font-medium text-gray-700 mb-1">
            <i class="fa-solid fa-earth-asia text-gray-400 mr-1"></i>
            Múi giờ hệ thống
          </label>
          <select name="settings[timezone]" 
                  id="settings_timezone"
                  class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors">
            <% Setting::AVAILABLE_TIMEZONES.each do |label, value| %>
              <option value="<%= value %>" <%= 'selected' if @settings.find { |s| s[:key] == 'timezone' }&.dig(:value) == value %>>
                <%= label %>
              </option>
            <% end %>
          </select>
          <p class="mt-1 text-xs text-gray-500">Múi giờ dùng để tính toán giờ làm việc và Smart Routing</p>
        </div>
      </div>
    </div>

    <%# Submit %>
    <div class="flex justify-end">
      <button type="submit" class="px-6 py-2.5 rounded-lg font-medium transition-colors flex items-center gap-2 text-white" style="background-color: #0B387A;">
        <i class="fa-solid fa-save"></i>
        Lưu cài đặt
      </button>
    </div>
  <% end %>
</div>
