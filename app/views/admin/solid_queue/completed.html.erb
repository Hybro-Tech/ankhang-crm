<%# Completed Jobs Today View %>

<div class="bg-white min-h-screen py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <%# Header %>
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div class="flex items-center">
        <%= link_to admin_solid_queue_path, class: "mr-4 p-2 rounded-lg hover:bg-gray-200 transition-colors" do %>
          <i class="fa-solid fa-arrow-left text-gray-600"></i>
        <% end %>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">
            <i class="fa-solid fa-check-circle text-green-600 mr-2"></i>
            Completed Jobs
          </h1>
          <p class="mt-1 text-sm text-gray-500">Jobs hoàn thành hôm nay (<%= @stats[:completed_today] %> jobs)</p>
        </div>
      </div>
      <div class="mt-4 sm:mt-0 flex flex-wrap gap-2">
        <% if @stats[:completed_today] > 0 %>
          <%= button_to clear_completed_admin_solid_queue_path, 
              method: :delete,
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 shadow-sm",
              data: { turbo_confirm: "Xóa tất cả jobs đã hoàn thành (> 24h)?" } do %>
            <i class="fa-solid fa-broom mr-2"></i> Dọn jobs cũ
          <% end %>
        <% end %>
        <%= link_to admin_solid_queue_path, 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 shadow-sm" do %>
          <i class="fa-solid fa-arrow-left mr-2"></i> Quay lại
        <% end %>
      </div>
    </div>

    <%# Jobs Table %>
    <div class="bg-white shadow-sm rounded-xl border border-gray-100 overflow-hidden">
      <div class="overflow-x-auto">
        <% if @completed_jobs.any? %>
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Job ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Job Class</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Queue</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Arguments</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Started At</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Finished At</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Duration</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @completed_jobs.each do |job| %>
                <tr class="hover:bg-green-50/50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-500">
                    #<%= job.id %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= job.class_name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                      <%= job.queue_name %>
                    </span>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500 max-w-xs truncate" title="<%= job.arguments&.to_json %>">
                    <%= truncate(job.arguments&.to_json.to_s, length: 40) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% if job.respond_to?(:started_at) && job.started_at %>
                      <%= job.started_at.strftime('%H:%M:%S') %>
                    <% else %>
                      -
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <span title="<%= job.finished_at&.strftime('%Y-%m-%d %H:%M:%S') %>">
                      <%= job.finished_at&.strftime('%H:%M:%S') %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <% if job.respond_to?(:started_at) && job.started_at && job.finished_at %>
                      <% duration = job.finished_at - job.started_at %>
                      <span class="<%= duration > 5 ? 'text-yellow-600' : 'text-green-600' %> font-medium">
                        <%= number_with_precision(duration, precision: 2) %>s
                      </span>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="p-12 text-center">
            <div class="bg-gray-50 h-20 w-20 rounded-full flex items-center justify-center mx-auto mb-4">
              <i class="fa-solid fa-inbox text-4xl text-gray-300"></i>
            </div>
            <p class="text-lg font-medium text-gray-900 mb-1">Chưa có jobs hoàn thành hôm nay</p>
            <p class="text-sm text-gray-500">Các jobs sẽ xuất hiện ở đây sau khi hoàn thành</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
