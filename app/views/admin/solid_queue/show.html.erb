<%# Custom Solid Queue Monitoring Dashboard %>
<%# Provides visibility into background job processing with management actions %>

<div class="bg-gray-50 min-h-screen py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <%# Flash Messages %>
    <% if flash[:notice] %>
      <div class="mb-4 p-4 bg-green-50 border border-green-200 rounded-lg flex items-center">
        <i class="fa-solid fa-check-circle text-green-600 mr-2"></i>
        <span class="text-green-800"><%= flash[:notice] %></span>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg flex items-center">
        <i class="fa-solid fa-exclamation-circle text-red-600 mr-2"></i>
        <span class="text-red-800"><%= flash[:alert] %></span>
      </div>
    <% end %>

    <%# Header with Actions %>
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Solid Queue Monitor</h1>
        <p class="mt-1 text-sm text-gray-500">Background jobs monitoring và management</p>
      </div>
      <div class="mt-4 sm:mt-0 flex flex-wrap gap-2">
        <%= link_to admin_solid_queue_path, 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 shadow-sm",
            data: { turbo_frame: "_top" } do %>
          <i class="fa-solid fa-rotate mr-2"></i> Làm mới
        <% end %>
        
        <% if @stats[:completed_today] > 0 %>
          <%= button_to clear_completed_admin_solid_queue_path, 
              method: :delete,
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 shadow-sm",
              data: { turbo_confirm: "Xóa tất cả jobs đã hoàn thành (> 24h)?" } do %>
            <i class="fa-solid fa-broom mr-2"></i> Dọn jobs cũ
          <% end %>
        <% end %>
      </div>
    </div>

    <%# KPI Cards %>
    <div class="grid grid-cols-2 gap-5 sm:grid-cols-3 lg:grid-cols-6 mb-8">
      <%# Total Jobs %>
      <div class="bg-white overflow-hidden shadow-sm rounded-xl border border-gray-100 p-4">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-blue-50 rounded-md p-2">
            <i class="fa-solid fa-list-check text-brand-blue"></i>
          </div>
          <div class="ml-3">
            <p class="text-xs text-gray-500">Tổng Jobs</p>
            <p class="text-lg font-bold text-gray-900"><%= number_with_delimiter(@stats[:total_jobs]) %></p>
          </div>
        </div>
      </div>

      <%# Pending %>
      <div class="bg-white overflow-hidden shadow-sm rounded-xl border border-gray-100 p-4">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-yellow-50 rounded-md p-2">
            <i class="fa-solid fa-clock text-yellow-600"></i>
          </div>
          <div class="ml-3">
            <p class="text-xs text-gray-500">Pending</p>
            <p class="text-lg font-bold text-gray-900"><%= number_with_delimiter(@stats[:pending]) %></p>
          </div>
        </div>
      </div>

      <%# Scheduled %>
      <div class="bg-white overflow-hidden shadow-sm rounded-xl border border-gray-100 p-4">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-purple-50 rounded-md p-2">
            <i class="fa-solid fa-calendar-clock text-purple-600"></i>
          </div>
          <div class="ml-3">
            <p class="text-xs text-gray-500">Scheduled</p>
            <p class="text-lg font-bold text-gray-900"><%= number_with_delimiter(@stats[:scheduled]) %></p>
          </div>
        </div>
      </div>

      <%# Failed %>
      <div class="bg-white overflow-hidden shadow-sm rounded-xl border border-gray-100 p-4">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-red-50 rounded-md p-2">
            <i class="fa-solid fa-triangle-exclamation text-red-600"></i>
          </div>
          <div class="ml-3">
            <p class="text-xs text-gray-500">Failed</p>
            <p class="text-lg font-bold text-red-600"><%= number_with_delimiter(@stats[:failed]) %></p>
          </div>
        </div>
      </div>

      <%# Workers %>
      <div class="bg-white overflow-hidden shadow-sm rounded-xl border border-gray-100 p-4">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-green-50 rounded-md p-2">
            <i class="fa-solid fa-server text-green-600"></i>
          </div>
          <div class="ml-3">
            <p class="text-xs text-gray-500">Processes</p>
            <p class="text-lg font-bold text-green-600"><%= @stats[:processes] %></p>
          </div>
        </div>
      </div>

      <%# Completed Today %>
      <div class="bg-white overflow-hidden shadow-sm rounded-xl border border-gray-100 p-4">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-green-50 rounded-md p-2">
            <i class="fa-solid fa-check-circle text-green-600"></i>
          </div>
          <div class="ml-3">
            <p class="text-xs text-gray-500">Hôm nay</p>
            <p class="text-lg font-bold text-gray-900"><%= number_with_delimiter(@stats[:completed_today]) %></p>
          </div>
        </div>
      </div>
    </div>

    <%# Content Grid %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
      <%# Chart Section %>
      <div class="bg-white shadow-sm rounded-xl border border-gray-100 p-6 lg:col-span-2">
        <h3 class="text-lg leading-6 font-semibold text-gray-900 mb-4">Jobs theo giờ (24h)</h3>
        <div class="h-64">
          <% if @jobs_by_hour.present? %>
            <%= line_chart @jobs_by_hour, 
                colors: ["#0B387A"],
                library: {
                  plugins: { legend: { display: false } },
                  scales: { 
                    y: { beginAtZero: true },
                    x: { grid: { display: false } }
                  }
                } %>
          <% else %>
            <div class="flex items-center justify-center h-full text-gray-400">
              <div class="text-center">
                <i class="fa-solid fa-chart-line text-4xl mb-2"></i>
                <p>Không có dữ liệu</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <%# Queues %>
      <div class="bg-white shadow-sm rounded-xl border border-gray-100 p-6">
        <h3 class="text-lg leading-6 font-semibold text-gray-900 mb-4">Queues</h3>
        <div class="space-y-3">
          <% if @queues.any? %>
            <% @queues.each do |queue| %>
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-sm font-medium text-gray-900"><%= queue.queue_name %></span>
                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                  <%= queue.job_count %> jobs
                </span>
              </div>
            <% end %>
          <% else %>
            <div class="text-center text-gray-400 py-4">
              <i class="fa-solid fa-check-circle text-2xl mb-2"></i>
              <p>Không có jobs pending</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <%# Tables Grid %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <%# Recent Jobs %>
      <div class="bg-white shadow-sm rounded-xl border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100">
          <h3 class="text-lg leading-6 font-semibold text-gray-900">Recent Jobs</h3>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Job Class</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Queue</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @recent_jobs.each do |job| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 text-sm font-medium text-gray-900"><%= job.class_name %></td>
                  <td class="px-4 py-3 text-sm text-gray-500"><%= job.queue_name %></td>
                  <td class="px-4 py-3 text-sm text-gray-500"><%= time_ago_in_words(job.created_at) %> trước</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <%# Failed Jobs %>
      <div class="bg-white shadow-sm rounded-xl border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center">
          <h3 class="text-lg leading-6 font-semibold text-gray-900">Failed Jobs</h3>
          <div class="flex items-center gap-2">
            <% if @stats[:failed] > 0 %>
              <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                <%= @stats[:failed] %> failed
              </span>
              <%= button_to retry_all_admin_solid_queue_path, 
                  method: :post,
                  class: "inline-flex items-center px-2 py-1 text-xs font-medium rounded text-green-700 bg-green-100 hover:bg-green-200",
                  data: { turbo_confirm: "Retry tất cả #{@stats[:failed]} failed jobs?" } do %>
                <i class="fa-solid fa-rotate-right mr-1"></i> Retry All
              <% end %>
              <%= button_to discard_all_admin_solid_queue_path, 
                  method: :delete,
                  class: "inline-flex items-center px-2 py-1 text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200",
                  data: { turbo_confirm: "Xóa tất cả #{@stats[:failed]} failed jobs?" } do %>
                <i class="fa-solid fa-trash mr-1"></i> Discard All
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="overflow-x-auto">
          <% if @failed_jobs.any? %>
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Job</th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Error</th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Failed At</th>
                  <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @failed_jobs.each do |failed| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 text-sm font-medium text-gray-900"><%= failed.job&.class_name %></td>
                    <td class="px-4 py-3 text-sm text-red-600 truncate max-w-xs" title="<%= failed.error&.dig('message') %>">
                      <%= truncate(failed.error&.dig("message").to_s, length: 50) %>
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-500"><%= time_ago_in_words(failed.created_at) %> trước</td>
                    <td class="px-4 py-3 text-center">
                      <div class="flex items-center justify-center gap-1">
                        <%= button_to retry_admin_solid_queue_path(id: failed.id), 
                            method: :post,
                            class: "p-1 text-green-600 hover:text-green-800 hover:bg-green-50 rounded",
                            title: "Retry" do %>
                          <i class="fa-solid fa-rotate-right"></i>
                        <% end %>
                        <%= button_to discard_admin_solid_queue_path(id: failed.id), 
                            method: :delete,
                            class: "p-1 text-red-600 hover:text-red-800 hover:bg-red-50 rounded",
                            title: "Discard",
                            data: { turbo_confirm: "Xóa failed job này?" } do %>
                          <i class="fa-solid fa-trash"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <div class="p-8 text-center text-gray-400">
              <i class="fa-solid fa-check-circle text-4xl text-green-400 mb-2"></i>
              <p>Không có failed jobs</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
