<%# Failed Jobs Full Page View %>

<div class="bg-gray-50 min-h-screen py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <%# Header %>
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div class="flex items-center">
        <%= link_to admin_solid_queue_path, class: "mr-4 p-2 rounded-lg hover:bg-gray-200 transition-colors" do %>
          <i class="fa-solid fa-arrow-left text-gray-600"></i>
        <% end %>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">
            <i class="fa-solid fa-triangle-exclamation text-red-600 mr-2"></i>
            Failed Jobs
          </h1>
          <p class="mt-1 text-sm text-gray-500">Jobs bị lỗi cần xử lý (<%= @stats[:failed] %> jobs)</p>
        </div>
      </div>
      <div class="mt-4 sm:mt-0 flex flex-wrap gap-2">
        <% if @stats[:failed] > 0 %>
          <%= button_to retry_all_admin_solid_queue_path, 
              method: :post,
              class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200",
              data: { turbo_confirm: "Retry tất cả #{@stats[:failed]} failed jobs?" } do %>
            <i class="fa-solid fa-rotate-right mr-2"></i> Retry All
          <% end %>
          <%= button_to discard_all_admin_solid_queue_path, 
              method: :delete,
              class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200",
              data: { turbo_confirm: "Xóa tất cả #{@stats[:failed]} failed jobs?" } do %>
            <i class="fa-solid fa-trash mr-2"></i> Discard All
          <% end %>
        <% end %>
        <%= link_to admin_solid_queue_path, 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 shadow-sm" do %>
          <i class="fa-solid fa-arrow-left mr-2"></i> Quay lại
        <% end %>
      </div>
    </div>

    <%# Jobs Table %>
    <div class="bg-white shadow-sm rounded-xl border border-gray-100 overflow-hidden">
      <div class="overflow-x-auto">
        <% if @failed_jobs.any? %>
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Job ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Job Class</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Queue</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Error</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Failed At</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @failed_jobs.each do |failed| %>
                <tr class="hover:bg-red-50/50 group">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-500">
                    #<%= failed.job_id %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= failed.job&.class_name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                      <%= failed.job&.queue_name %>
                    </span>
                  </td>
                  <td class="px-6 py-4 text-sm">
                    <div class="max-w-md">
                      <p class="text-red-600 font-medium truncate" title="<%= failed.error&.dig('message') %>">
                        <%= truncate(failed.error&.dig('message').to_s, length: 80) %>
                      </p>
                      <% if failed.error&.dig('backtrace').present? %>
                        <details class="mt-1">
                          <summary class="text-xs text-gray-500 cursor-pointer hover:text-gray-700">
                            Xem backtrace
                          </summary>
                          <pre class="mt-2 text-xs bg-gray-900 text-gray-100 p-3 rounded-lg overflow-x-auto max-h-48"><%= failed.error&.dig('backtrace')&.first(10)&.join("\n") %></pre>
                        </details>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <span title="<%= failed.created_at&.strftime('%Y-%m-%d %H:%M:%S') %>">
                      <%= time_ago_in_words(failed.created_at) %> trước
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <div class="flex items-center justify-center gap-2">
                      <%= button_to retry_admin_solid_queue_path(id: failed.id), 
                          method: :post,
                          class: "inline-flex items-center px-3 py-1.5 text-xs font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200 transition-colors",
                          title: "Retry" do %>
                        <i class="fa-solid fa-rotate-right mr-1"></i> Retry
                      <% end %>
                      <%= button_to discard_admin_solid_queue_path(id: failed.id), 
                          method: :delete,
                          class: "inline-flex items-center px-3 py-1.5 text-xs font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200 transition-colors",
                          title: "Discard",
                          data: { turbo_confirm: "Xóa failed job này?" } do %>
                        <i class="fa-solid fa-trash mr-1"></i> Discard
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="p-12 text-center">
            <div class="bg-green-50 h-20 w-20 rounded-full flex items-center justify-center mx-auto mb-4">
              <i class="fa-solid fa-check-circle text-4xl text-green-400"></i>
            </div>
            <p class="text-lg font-medium text-gray-900 mb-1">Không có failed jobs</p>
            <p class="text-sm text-gray-500">Tuyệt vời! Tất cả jobs đang hoạt động bình thường</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
