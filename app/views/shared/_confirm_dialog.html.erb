<%# Custom Confirm Dialog - Replaces native browser confirm() %>
<%# Usage: Add this partial to application layout and use data-turbo-confirm on buttons %>

<div data-controller="confirm-dialog"
     data-confirm-dialog-title-value="<%= t('confirm_dialog.title', default: 'Xác nhận') %>"
     data-confirm-dialog-confirm-text-value="<%= t('confirm_dialog.confirm', default: 'Xác nhận') %>"
     data-confirm-dialog-cancel-text-value="<%= t('confirm_dialog.cancel', default: 'Hủy') %>"
     class="relative z-50"
     aria-labelledby="modal-title"
     role="dialog"
     aria-modal="true">

  <%# Modal Container - Hidden by default %>
  <div data-confirm-dialog-target="dialog"
       data-action="keydown->confirm-dialog#closeOnEscape"
       class="hidden fixed inset-0 z-50 w-screen overflow-y-auto"
       aria-hidden="true">
       
    <%# Backdrop %>
    <div data-confirm-dialog-target="backdrop"
         data-action="click->confirm-dialog#closeOnBackdrop"
         class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity opacity-0 duration-300 ease-out">
    </div>

    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <%# Dialog Panel %>
      <div data-confirm-dialog-target="panel"
           class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95 duration-300 ease-out sm:my-8 sm:w-full sm:max-w-lg">
        
        <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
          <div class="sm:flex sm:items-start">
            <%# Icons Container %>
            <div data-confirm-dialog-target="iconWrapper" class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10 transition-colors duration-200">
              <%# Warning Icon (Default/Danger) %>
              <svg data-confirm-dialog-target="warningIcon" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
              </svg>
              
              <%# Success Icon (Green) %>
              <svg data-confirm-dialog-target="successIcon" class="hidden h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              
              <%# Info Icon (Blue) %>
              <svg data-confirm-dialog-target="infoIcon" class="hidden h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
              </svg>
            </div>
            
            <%# Content %>
            <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
              <h3 data-confirm-dialog-target="title"
                  class="text-base font-semibold leading-6 text-gray-900"
                  id="modal-title">
                Xác nhận
              </h3>
              <div class="mt-2">
                <p data-confirm-dialog-target="message"
                   class="text-sm text-gray-500"
                   id="modal-description">
                  Bạn có chắc chắn muốn thực hiện hành động này?
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <%# Actions %>
        <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
          <button type="button"
                  data-confirm-dialog-target="confirmButton"
                  data-action="click->confirm-dialog#confirmAction"
                  class="inline-flex w-full justify-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 sm:ml-3 sm:w-auto">
            <%= t('confirm_dialog.confirm', default: 'Xác nhận') %>
          </button>
          <button type="button"
                  data-confirm-dialog-target="cancelButton"
                  data-action="click->confirm-dialog#cancel"
                  class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">
            <%= t('confirm_dialog.cancel', default: 'Hủy') %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
