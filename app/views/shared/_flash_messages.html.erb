<%# Flash Messages - displays success, error, warning, info alerts %>
<div id="flash-messages" class="fixed top-20 right-4 z-50 space-y-2 max-w-sm">
  <% flash.each do |type, message| %>
    <% 
      bg_color = case type.to_s
        when 'notice', 'success' then 'bg-green-50 border-green-500 text-green-800'
        when 'alert', 'error' then 'bg-red-50 border-red-500 text-red-800'
        when 'warning' then 'bg-yellow-50 border-yellow-500 text-yellow-800'
        else 'bg-blue-50 border-blue-500 text-blue-800'
      end
      icon = case type.to_s
        when 'notice', 'success' then 'fa-circle-check'
        when 'alert', 'error' then 'fa-circle-xmark'
        when 'warning' then 'fa-triangle-exclamation'
        else 'fa-circle-info'
      end
    %>
    <div class="flash-animate border-l-4 p-4 rounded-r-lg shadow-lg <%= bg_color %>" data-controller="flash" data-flash-timeout-value="5000">
      <div class="flex items-start">
        <i class="fa-solid <%= icon %> mr-3 mt-0.5"></i>
        <div class="flex-1">
          <p class="text-sm font-medium"><%= message %></p>
        </div>
        <button type="button" class="ml-4 text-gray-400 hover:text-gray-600" data-action="click->flash#dismiss">
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>
    </div>
  <% end %>
</div>
