<div id="<%= dom_id(contact) %>" class="p-4 hover:bg-gray-50 transition-colors group">
  <div class="flex justify-between items-start mb-1">
    <div class="font-medium text-gray-900 text-sm">
      <%= link_to contact.name, contact_path(contact), class: "hover:text-brand-blue" %>
    </div>
    <span class="text-[10px] text-gray-400 font-mono bg-gray-100 px-1.5 py-0.5 rounded">
      <%= contact.code %>
    </span>
  </div>
  
  <div class="flex items-center text-xs text-gray-500 mb-2">
    <i class="fa-solid fa-phone text-[10px] mr-1.5 w-3 text-center"></i>
    <span class="font-mono"><%= contact.phone %></span>
  </div>

  <div class="flex flex-wrap gap-2 text-xs">
    <span class="px-2 py-0.5 rounded-full bg-blue-50 text-brand-blue border border-blue-100">
      <%= contact.service_type&.name || "N/A" %>
    </span>
    <span class="px-2 py-0.5 rounded-full <%= status_badge_color(contact) %> border border-gray-100">
      <%= t("contacts.status.#{contact.status}") %>
    </span>
  </div>
  
  <div class="mt-2 pt-2 border-t border-gray-100 flex justify-between items-center">
    <span class="text-[10px] text-gray-400" title="<%= contact.created_at.strftime("%d/%m/%Y %H:%M") %>">
      <%= time_ago_in_words(contact.created_at) %> trước
    </span>
    <%= link_to contact_path(contact), class: "text-[10px] text-gray-400 group-hover:text-brand-blue flex items-center transition-colors" do %>
      Chi tiết <i class="fa-solid fa-chevron-right ml-1"></i>
    <% end %>
  </div>
</div>
