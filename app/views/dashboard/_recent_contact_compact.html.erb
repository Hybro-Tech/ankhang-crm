<div class="py-2 px-3 hover:bg-blue-50 transition-colors group">
  <div class="flex justify-between items-start">
    <div>
      <p class="font-bold text-gray-900 text-sm group-hover:text-brand-blue truncate max-w-[150px]"><%= contact.name %></p>
      <p class="text-xs text-gray-500 font-mono"><%= contact.phone %></p>
    </div>
    <span class="text-[10px] text-gray-400 whitespace-nowrap"><%= time_ago_in_words(contact.created_at) %></span>
  </div>
  <div class="flex justify-between items-center mt-1">
     <span class="<%= status_badge_color(contact) %> text-[10px] px-1.5 py-0.5 rounded-sm">
       <%= t("contacts.status.#{contact.status}") %>
     </span>
     <span class="text-[10px] text-gray-400 bg-gray-100 px-1 rounded"><%= contact.service_type&.name&.truncate(15) %></span>
  </div>
</div>
