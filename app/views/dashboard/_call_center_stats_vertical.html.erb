<!-- Vertical Stats (Compact) -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-3 hover:bg-gray-50 transition-colors">
  <div class="flex items-center justify-between mb-1">
    <span class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Hôm nay</span>
    <i class="fa-solid fa-calendar-day text-brand-blue opacity-50"></i>
  </div>
  <p class="text-2xl font-bold text-gray-800" id="stat_today"><%= today %></p>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-3 hover:bg-gray-50 transition-colors">
