<!-- Card Today -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5 flex items-center transition-transform hover:scale-105 duration-200">
  <div class="p-3 rounded-full bg-blue-50 text-brand-blue mr-4">
    <i class="fa-solid fa-calendar-day text-xl w-6 h-6 flex items-center justify-center"></i>
  </div>
  <div>
    <p class="text-sm font-medium text-gray-500">Hôm nay</p>
    <p class="text-2xl font-bold text-gray-900" id="stat_today"><%= today %></p>
  </div>
</div>

<!-- Card Week -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5 flex items-center transition-transform hover:scale-105 duration-200">
  <div class="p-3 rounded-full bg-purple-50 text-purple-600 mr-4">
    <i class="fa-solid fa-calendar-week text-xl w-6 h-6 flex items-center justify-center"></i>
  </div>
  <div>
    <p class="text-sm font-medium text-gray-500">Tuần này</p>
    <p class="text-2xl font-bold text-gray-900" id="stat_week"><%= week %></p>
  </div>
</div>

<!-- Card Month -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5 flex items-center transition-transform hover:scale-105 duration-200">
  <div class="p-3 rounded-full bg-green-50 text-green-600 mr-4">
    <i class="fa-solid fa-calendar text-xl w-6 h-6 flex items-center justify-center"></i>
  </div>
  <div>
    <p class="text-sm font-medium text-gray-500">Tháng này</p>
    <p class="text-2xl font-bold text-gray-900" id="stat_month"><%= month %></p>
  </div>
</div>
