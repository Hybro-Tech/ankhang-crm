<%= form_with model: user, local: true, class: "max-w-none w-full" do |f| %>
  <% if user.errors.any? %>
    <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
      <div class="flex items-center text-red-800">
        <i class="fa-solid fa-exclamation-triangle mr-2"></i>
        <span class="font-medium">Có <%= user.errors.count %> lỗi:</span>
      </div>
      <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
        <% user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
    <div class="space-y-6">
      <h3 class="text-lg font-bold text-gray-900 border-b border-gray-200 pb-2">Thông tin tài khoản</h3>
      
      <div>
        <%= f.label :name, "Họ và tên", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#0B387A] outline-none" %>
      </div>

      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#0B387A] outline-none" %>
      </div>

      <div>
        <%= f.label :username, "Username", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :username, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#0B387A] outline-none" %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :password, "Mật khẩu", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#0B387A] outline-none", placeholder: user.new_record? ? "" : "Để trống nếu không đổi" %>
        </div>
        <div>
          <%= f.label :password_confirmation, "Xác nhận mật khẩu", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#0B387A] outline-none" %>
        </div>
      </div>
    </div>

    <div class="space-y-6">
      <h3 class="text-lg font-bold text-gray-900 border-b border-gray-200 pb-2">Phân quyền & Tổ chức</h3>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Vai trò (Role)</label>
        <%= f.collection_select :role_ids, Role.all, :id, :name, 
            { include_blank: "Chọn vai trò" }, 
            { class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#0B387A] outline-none bg-white", 
              multiple: false, 
              name: "user[role_ids][]" } %>
      </div>

      <div>
        <%= f.label :team_id, "Thuộc Team", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.collection_select :team_id, Team.all, :id, :name, { include_blank: "Không thuộc team nào" }, { class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#0B387A] outline-none bg-white" } %>
      </div>

      <div>
        <%= f.label :status, "Trạng thái", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :status, User.statuses.keys.map { |k| [k.titleize, k] }, {}, { class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#0B387A] outline-none bg-white" } %>
      </div>
    </div>
  </div>

  <div class="flex items-center justify-center space-x-4 pt-8 border-t border-gray-200">
    <%= link_to users_path, class: "px-8 py-2.5 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-medium transition-colors" do %>
      Hủy bỏ
    <% end %>
    <button type="submit" class="px-8 py-2.5 bg-[#0B387A] text-white rounded-lg hover:bg-blue-900 font-medium shadow-lg shadow-blue-500/30 flex items-center transition-colors cursor-pointer">
      <i class="fa-solid fa-save mr-2"></i>
      Lưu Thay đổi
    </button>
  </div>
<% end %>
