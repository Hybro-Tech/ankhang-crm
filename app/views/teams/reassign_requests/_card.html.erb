<%# TASK-052: Reassign Request Card Partial %>
<%= turbo_frame_tag dom_id(request) do %>
  <div class="bg-white rounded-xl border border-gray-200 p-4 shadow-sm hover:shadow-md transition-shadow">
    <%# Header %>
    <div class="flex items-center justify-between mb-3">
      <div class="flex items-center gap-2">
        <span class="text-sm text-gray-500">#REQ-<%= request.id.to_s.rjust(3, '0') %></span>
        <span class="text-gray-300">•</span>
        <span class="text-sm text-gray-500"><%= time_ago_in_words(request.created_at) %> trước</span>
      </div>
      <span class="px-2.5 py-0.5 text-xs font-medium rounded-full 
                   <%= request.reassign? ? 'bg-orange-100 text-orange-700' : 'bg-red-100 text-red-700' %>">
        <%= request.reassign? ? "Chuyển KH" : "Gỡ KH" %>
      </span>
    </div>

    <%# Contact Info %>
    <div class="mb-3">
      <h4 class="font-semibold text-gray-900">
        <%= request.contact.code %> - <%= request.contact.name %>
      </h4>
      <div class="flex items-center gap-2 text-sm text-gray-600 mt-1">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <%= request.from_user.name %>
        </span>
        <span>→</span>
        <% if request.reassign? && request.to_user %>
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <%= request.to_user.name %>
          </span>
        <% else %>
          <span class="flex items-center gap-1 text-orange-600">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
            </svg>
            Pool
          </span>
        <% end %>
      </div>
    </div>

    <%# Reason %>
    <p class="text-sm text-gray-600 mb-3">
      <span class="text-gray-500">Lý do:</span> <%= truncate(request.reason, length: 100) %>
    </p>

    <%# Requester %>
    <p class="text-xs text-gray-500 mb-4">
      Yêu cầu bởi: <%= request.requested_by.name %>
    </p>

    <%# Actions %>
    <% if request.pending? %>
      <div class="flex items-center gap-3">
        <%= button_to "Duyệt", 
                      approve_teams_reassign_request_path(request),
                      method: :post,
                      class: "px-4 py-2 text-sm font-medium text-white bg-green-600 rounded-lg hover:bg-green-700",
                      data: { turbo_confirm: "Xác nhận duyệt yêu cầu #{request.reassign? ? 'chuyển' : 'gỡ'} khách hàng này?" } %>
        <button type="button"
                class="px-4 py-2 text-sm font-medium text-red-600 bg-white border border-red-300 rounded-lg hover:bg-red-50"
                data-action="click->reject-modal#open"
                data-reject-url="<%= reject_teams_reassign_request_path(request) %>">
          Từ chối
        </button>
      </div>
    <% else %>
      <div class="flex items-center gap-2">
        <span class="px-3 py-1 text-sm font-medium rounded-full
                     <%= request.approved? ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
          <%= request.approved? ? "✓ Đã duyệt" : "✗ Đã từ chối" %>
        </span>
        <% if request.approved_by %>
          <span class="text-sm text-gray-500">bởi <%= request.approved_by.name %></span>
        <% end %>
      </div>
      <% if request.rejected? && request.rejection_reason.present? %>
        <p class="text-sm text-red-600 mt-2">
          <span class="font-medium">Lý do:</span> <%= request.rejection_reason %>
        </p>
      <% end %>
    <% end %>
  </div>
<% end %>
