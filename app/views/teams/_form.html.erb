<%= form_with(model: team, local: true, class: "space-y-6") do |f| %>
  <% if team.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
      <div class="flex">
        <div class="flex-shrink-0">
          <i class="fa-solid fa-circle-exclamation text-red-500"></i>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(team.errors.count, "lỗi") %> ngăn cản việc lưu đội nhóm này:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% team.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Left Column -->
    <div class="space-y-6">
      <div>
        <%= f.label :name, "Tên Team", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-brand-blue outline-none", placeholder: "VD: Sales Team Đà Nẵng", required: true %>
      </div>

       <div>
        <%= f.label :region, "Vùng / Miền", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :region, Team::REGIONS, { include_blank: "Chọn vùng (Tùy chọn)..." }, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-brand-blue outline-none bg-white" %>
      </div>

      <div>
        <%= f.label :description, "Mô tả", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :description, rows: 3, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-brand-blue outline-none", placeholder: "Mô tả chức năng nhiệm vụ của team..." %>
      </div>

      <div>
        <%= f.label :manager_id, "Quản lý (Manager)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.collection_select :manager_id, @managers || [], :id, :name, { include_blank: "Chọn Quản lý..." }, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-brand-blue outline-none bg-white" %>
        <p class="text-xs text-gray-500 mt-1">Người quản lý chịu trách nhiệm cho các thành viên trong team.</p>
      </div>
    </div>
    
    <!-- Right Column: Member Selection -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Thành viên</label>
      <div class="border border-gray-200 rounded-lg bg-gray-50 flex flex-col h-[320px]">
        
        <!-- List Header -->
        <div class="px-4 py-2 bg-gray-100 border-b border-gray-200 text-xs font-semibold text-gray-500 uppercase flex justify-between">
          <span>Chọn nhân viên</span>
          <span class="text-gray-400"><%= @available_users&.count || 0 %> khả dụng</span>
        </div>

        <!-- Scrollable List -->
        <div class="overflow-y-auto p-2 space-y-1 flex-1">
          <% if @available_users.present? %>
            <%= f.collection_check_boxes(:user_ids, @available_users, :id, :name) do |b| %>
              <label class="flex items-center p-2 rounded hover:bg-white transition-colors cursor-pointer group hover:bg-blue-50/50">
                <%= b.check_box(class: "h-4 w-4 text-brand-blue rounded border-gray-300 focus:ring-brand-blue cursor-pointer", checked: team.users.include?(b.object)) %>
                <div class="ml-3 flex items-center w-full">
                  <img src="https://ui-avatars.com/api/?name=<%= URI.encode_www_form_component(b.object.name) %>&background=random&size=32" class="w-6 h-6 rounded-full mr-2 opacity-75 group-hover:opacity-100">
                  <span class="text-sm text-gray-700 font-medium group-hover:text-gray-900"><%= b.text %></span>
                </div>
              </label>
            <% end %>
            <!-- Handle Custom Input Name for logic in Controller -->
            <%# Note: collection_check_boxes uses modelname[user_ids][], which works with accepts_nested_attributes optionally, 
                but our controller uses a custom params logic :member_ids. 
                Wait, f.collection_check_boxes with :user_ids automatically maps to team.user_ids if association exists. 
                Actually, standard Rails `user_ids` setter on `has_many` works automatically! 
                So I don't need manual logic in Controller `update_members` IF I use standard `user_ids` param.
                
                Let's use the standard Rails way: `user_ids`.
                However, my controller manual logic uses `params[:member_ids]`.
                
                Let's switch to standard `user_ids` to be cleaner. Use `make_sure_controller_permits_user_ids`.
            %>
          <% else %>
            <div class="text-center py-8 text-gray-400 text-sm">
              Không tìm thấy nhân viên nào chưa có team.
            </div>
          <% end %>
        </div>
      </div>
      <p class="text-xs text-gray-500 mt-2">
        <i class="fa-solid fa-circle-info mr-1"></i>
        Chỉ hiển thị nhân viên chưa thuộc team nào (hoặc đang thuộc team này).
      </p>
    </div>
  </div>

  <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200 mt-6">
    <%= link_to "Hủy bỏ", teams_path, class: "px-6 py-2.5 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-medium transition-colors" %>
    <%= f.submit team.new_record? ? "Tạo Team" : "Cập nhật Team", class: "px-6 py-2.5 bg-brand-blue text-white rounded-lg hover:bg-blue-900 font-medium shadow-lg shadow-blue-500/30 transition-colors cursor-pointer" %>
  </div>
<% end %>
