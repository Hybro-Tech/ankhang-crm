<%# TASK-023: Timeline container for interactions %>
<div class="flow-root" id="interactions_timeline">
  <ul class="-mb-8" id="interactions_list">
    <% if interactions.any? %>
      <%= render partial: "interactions/interaction", collection: interactions %>
    <% else %>
      <li class="text-center py-8 text-gray-500" id="no_interactions">
        <i class="fa-solid fa-comments text-3xl text-gray-300 mb-2"></i>
        <p>Chưa có tương tác nào</p>
      </li>
    <% end %>
  </ul>
</div>
