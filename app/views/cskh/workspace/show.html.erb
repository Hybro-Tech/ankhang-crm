<%# CSKH Workspace - Agent Workspace Style (Option B) %>
<%# Based on Zendesk/HubSpot Agent Inbox patterns %>
<%= turbo_stream_from "user_#{current_user.id}_contacts" %>
<% content_for :page_title, "Trung tâm CSKH" %>

<div class="flex flex-col gap-6" data-controller="workspace-tabs" data-workspace-tabs-base-path-value="/cskh/workspace">
  <%# Header %>
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Trung tâm CSKH</h1>
      <p class="text-sm text-gray-500 mt-1">Quản lý khách hàng cần hỗ trợ và chăm sóc sau bán</p>
    </div>
    <div class="flex items-center space-x-3">
      <button type="button" disabled class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-green-500 text-white hover:bg-green-600 transition-colors opacity-70 cursor-not-allowed" title="Chờ tích hợp ZNS">
        <i class="fa-solid fa-paper-plane mr-2"></i> Gửi ZNS nhanh
      </button>
    </div>
  </div>

  <!-- Main Content -->
  <div class="flex gap-6">
    <!-- LEFT PANEL (70%) -->
    <div class="w-full lg:w-[70%] space-y-6">
      
      <!-- KPI Cards Section -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
        <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wider mb-4">Thống kê nhanh</h3>
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-3">
        <div class="bg-white rounded-xl shadow-sm border-l-4 border-red-500 p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-2xl font-bold text-gray-900"><%= @failed_today_count %></p>
              <p class="text-xs text-gray-500">Khách thất bại</p>
            </div>
            <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center">
              <i class="fa-solid fa-triangle-exclamation text-red-500"></i>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border-l-4 border-orange-500 p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-2xl font-bold text-gray-900"><%= @stale_count %></p>
              <p class="text-xs text-gray-500">Cần follow-up</p>
            </div>
            <div class="w-10 h-10 rounded-full bg-orange-100 flex items-center justify-center">
              <i class="fa-solid fa-rotate text-orange-500"></i>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border-l-4 border-green-500 p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-2xl font-bold text-gray-900"><%= @closed_today_count %></p>
              <p class="text-xs text-gray-500">Đơn chốt mới</p>
            </div>
            <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
              <i class="fa-solid fa-check text-green-500"></i>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border-l-4 border-blue-500 p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-2xl font-bold text-gray-900"><%= @avg_response_time %>p</p>
              <p class="text-xs text-gray-500">Tốc độ phản hồi</p>
            </div>
            <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
              <i class="fa-solid fa-clock text-blue-500"></i>
            </div>
          </div>
        </div>
        </div>
      </div>

      <!-- Queue Section -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-4 py-3 border-b border-gray-100">
          <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wider">Danh sách xử lý</h3>
        </div>
        <!-- Tabs -->
        <div class="border-b border-gray-200 px-4">
          <nav class="flex space-x-6" aria-label="Tabs">
            <button type="button"
                    class="workspace-tab py-3 px-1 text-sm font-medium border-b-2 transition-colors"
                    data-workspace-tabs-target="tab"
                    data-tab="queue"
                    data-action="click->workspace-tabs#switchTab"
                    aria-selected="true">
              <i class="fa-solid fa-life-ring mr-1 text-red-500"></i>
              Queue Cứu khách
              <span class="ml-1 px-2 py-0.5 text-xs rounded-full bg-red-100 text-red-600"><%= @blacklist_contacts.count %></span>
            </button>
            <button type="button"
                    class="workspace-tab py-3 px-1 text-sm font-medium border-b-2 transition-colors"
                    data-workspace-tabs-target="tab"
                    data-tab="aftercare"
                    data-action="click->workspace-tabs#switchTab">
              <i class="fa-solid fa-gift mr-1 text-green-500"></i>
              Chăm sóc sau bán
              <span class="ml-1 px-2 py-0.5 text-xs rounded-full bg-green-100 text-green-600"><%= @closed_contacts.count %></span>
            </button>
            <button type="button"
                    class="workspace-tab py-3 px-1 text-sm font-medium border-b-2 transition-colors"
                    data-workspace-tabs-target="tab"
                    data-tab="inspection"
                    data-action="click->workspace-tabs#switchTab">
              <i class="fa-solid fa-magnifying-glass mr-1 text-orange-500"></i>
              Thanh tra
              <span class="ml-1 px-2 py-0.5 text-xs rounded-full bg-orange-100 text-orange-600"><%= @inspection_count %></span>
            </button>
          </nav>
        </div>

        <!-- Filter Bar -->
        <div class="px-4 py-3 bg-gray-50 border-b border-gray-100 flex items-center justify-between flex-wrap gap-2">
          <div class="flex items-center space-x-2">
            <span class="text-xs text-gray-500">Mức độ ưu tiên:</span>
            <select class="text-xs border border-gray-300 rounded-lg px-2 py-1.5 focus:ring-brand-blue focus:border-brand-blue">
              <option value="">Tất cả</option>
              <option value="high">Cao</option>
              <option value="medium">Trung bình</option>
              <option value="low">Thấp</option>
            </select>
          </div>
          <div class="flex items-center space-x-2">
            <div class="relative flex items-center">
              <i class="fa-solid fa-search absolute left-2.5 text-gray-400 text-xs pointer-events-none"></i>
              <input type="text" placeholder="Tìm kiếm khách hàng..." class="text-xs border border-gray-300 rounded-lg pl-8 pr-3 py-1.5 w-48 focus:ring-brand-blue focus:border-brand-blue">
            </div>
            <button type="button" class="text-xs border border-gray-300 rounded-lg px-3 py-1.5 hover:bg-gray-100 transition-colors">
              <i class="fa-solid fa-arrow-up-wide-short mr-1"></i> Sắp xếp
            </button>
          </div>
        </div>

        <!-- Data Table -->
        <turbo-frame id="contact_list_frame" data-workspace-tabs-target="frame">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Khách hàng</th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Số điện thoại</th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Sale phụ trách</th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ngày tạo</th>
                  <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">Mức độ</th>
                  <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">Hành động</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-100">
                <% if @blacklist_contacts.any? %>
                  <% @blacklist_contacts.limit(10).each do |contact| %>
                    <tr class="hover:bg-blue-50 transition-colors">
                      <td class="px-4 py-3 whitespace-nowrap">
                        <div class="flex items-center">
                          <div class="w-9 h-9 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white text-sm font-bold mr-3">
                            <%= contact.name&.first&.upcase || "?" %>
                          </div>
                          <div>
                            <p class="text-sm font-medium text-gray-900"><%= contact.name %></p>
                            <p class="text-xs text-gray-400"><%= contact.code %></p>
                          </div>
                        </div>
                      </td>
                      <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600">
                        <%= contact.phone || "N/A" %>
                      </td>
                      <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600">
                        <%= contact.assigned_user&.name || "Chưa gán" %>
                      </td>
                      <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                        <%= contact.created_at.strftime("%d/%m/%Y") %>
                      </td>
                      <td class="px-4 py-3 whitespace-nowrap text-center">
                        <% if contact.status_failed? %>
                          <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium rounded-full bg-red-100 text-red-700">Cao</span>
                        <% else %>
                          <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium rounded-full bg-yellow-100 text-yellow-700">Trung bình</span>
                        <% end %>
                      </td>
                      <td class="px-4 py-3 whitespace-nowrap text-center">
                        <div class="flex items-center justify-center space-x-2">
                          <%= button_to cskh_workspace_takeover_path(contact), 
                              method: :post,
                              class: "inline-flex items-center px-2.5 py-1 text-xs font-medium rounded-lg bg-brand-blue text-white hover:bg-blue-800 transition-colors",
                              data: { turbo_confirm: "Xác nhận nhận chăm sóc #{contact.name}?" } do %>
                            Cứu
                          <% end %>
                          <%= link_to contact_path(contact), class: "inline-flex items-center px-2.5 py-1 text-xs font-medium rounded-lg border border-gray-300 text-gray-600 hover:bg-gray-100 transition-colors" do %>
                            View
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="6" class="px-4 py-12 text-center">
                      <div class="text-gray-400">
                        <span class="text-3xl">❤️</span>
                        <p class="mt-2 text-sm font-medium">Không có khách hàng cần cứu</p>
                        <p class="text-xs">Tất cả đang được chăm sóc tốt!</p>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </turbo-frame>
      </div>
    </div>

    <!-- RIGHT PANEL (30%) -->
    <div class="hidden lg:block lg:w-[30%] space-y-6">
      
      <!-- Customer Health Score -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
        <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wider mb-4">Sức khỏe khách hàng</h3>
        <div class="flex items-center justify-center mb-4">
          <div class="relative w-32 h-32">
            <svg class="w-full h-full transform -rotate-90" viewBox="0 0 36 36">
              <circle cx="18" cy="18" r="14" fill="none" stroke="#e5e7eb" stroke-width="3"/>
              <circle cx="18" cy="18" r="14" fill="none" stroke="#22c55e" stroke-width="3" 
                      stroke-dasharray="<%= @health_healthy_pct %> <%= 100 - @health_healthy_pct %>" stroke-linecap="round"/>
              <circle cx="18" cy="18" r="14" fill="none" stroke="#eab308" stroke-width="3" 
                      stroke-dasharray="<%= @health_atrisk_pct %> <%= 100 - @health_atrisk_pct %>" 
                      stroke-dashoffset="-<%= @health_healthy_pct %>" stroke-linecap="round"/>
              <circle cx="18" cy="18" r="14" fill="none" stroke="#ef4444" stroke-width="3" 
                      stroke-dasharray="<%= @health_critical_pct %> <%= 100 - @health_critical_pct %>" 
                      stroke-dashoffset="-<%= @health_healthy_pct + @health_atrisk_pct %>" stroke-linecap="round"/>
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-2xl font-bold text-gray-900"><%= @health_healthy_pct %>%</span>
            </div>
          </div>
        </div>
        <div class="flex justify-center space-x-4 text-xs">
          <div class="flex items-center">
            <span class="w-3 h-3 rounded-full bg-green-500 mr-1"></span>
            <span class="text-gray-600">Healthy (<%= @health_healthy_pct %>%)</span>
          </div>
          <div class="flex items-center">
            <span class="w-3 h-3 rounded-full bg-yellow-500 mr-1"></span>
            <span class="text-gray-600">At Risk (<%= @health_atrisk_pct %>%)</span>
          </div>
          <div class="flex items-center">
            <span class="w-3 h-3 rounded-full bg-red-500 mr-1"></span>
            <span class="text-gray-600">Critical (<%= @health_critical_pct %>%)</span>
          </div>
        </div>
      </div>

      <!-- Quick Templates -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-4 py-3 border-b border-gray-100">
          <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wider">
            <i class="fa-solid fa-bolt text-yellow-500 mr-2"></i>
            Mẫu ZNS nhanh
          </h3>
        </div>
        <div class="divide-y divide-gray-100">
          <div class="p-3 hover:bg-blue-50 cursor-pointer transition-colors flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-900">Xác nhận đơn hàng</p>
              <p class="text-xs text-gray-400">Template ID: zns_001</p>
            </div>
            <i class="fa-solid fa-chevron-right text-gray-400"></i>
          </div>
          <div class="p-3 hover:bg-blue-50 cursor-pointer transition-colors flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-900">Thông báo vận chuyển</p>
              <p class="text-xs text-gray-400">Template ID: zns_002</p>
            </div>
            <i class="fa-solid fa-chevron-right text-gray-400"></i>
          </div>
          <div class="p-3 hover:bg-blue-50 cursor-pointer transition-colors flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-900">Hỗ trợ kỹ thuật</p>
              <p class="text-xs text-gray-400">Template ID: zns_003</p>
            </div>
            <i class="fa-solid fa-chevron-right text-gray-400"></i>
          </div>
        </div>
      </div>

      <!-- Today's Tasks -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-4 py-3 border-b border-gray-100">
          <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wider">
            <i class="fa-solid fa-list-check text-blue-500 mr-2"></i>
            Công việc hôm nay
          </h3>
        </div>
        <div class="p-3 space-y-2">
          <label class="flex items-start p-2 rounded-lg hover:bg-gray-50 cursor-pointer">
            <input type="checkbox" class="mt-0.5 h-4 w-4 text-brand-blue border-gray-300 rounded focus:ring-brand-blue">
            <div class="ml-2">
              <p class="text-sm text-gray-900">Gọi lại cho Nguyễn Văn A</p>
              <p class="text-xs text-gray-400">9:00 AM</p>
            </div>
          </label>
          <label class="flex items-start p-2 rounded-lg hover:bg-gray-50 cursor-pointer">
            <input type="checkbox" checked class="mt-0.5 h-4 w-4 text-brand-blue border-gray-300 rounded focus:ring-brand-blue">
            <div class="ml-2">
              <p class="text-sm text-gray-400 line-through">Phản hồi email khách hàng B</p>
              <p class="text-xs text-gray-400">10:30 AM</p>
            </div>
          </label>
          <label class="flex items-start p-2 rounded-lg hover:bg-gray-50 cursor-pointer">
            <input type="checkbox" class="mt-0.5 h-4 w-4 text-brand-blue border-gray-300 rounded focus:ring-brand-blue">
            <div class="ml-2">
              <p class="text-sm text-gray-900">Kiểm tra báo cáo tuần</p>
              <p class="text-xs text-gray-400">2:00 PM</p>
            </div>
          </label>
          <label class="flex items-start p-2 rounded-lg hover:bg-gray-50 cursor-pointer">
            <input type="checkbox" class="mt-0.5 h-4 w-4 text-brand-blue border-gray-300 rounded focus:ring-brand-blue">
            <div class="ml-2">
              <p class="text-sm text-gray-900">Gửi ZNS cho danh sách follow-up</p>
              <p class="text-xs text-gray-400">4:00 PM</p>
            </div>
          </label>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .workspace-tab {
    color: #6b7280;
    border-color: transparent;
  }
  .workspace-tab:hover {
    color: #374151;
  }
  .workspace-tab[aria-selected="true"] {
    color: #0B387A;
    border-color: #0B387A;
  }
</style>
