<%# TASK-075: Inspection Tab - Contacts with long appointment dates %>
<turbo-frame id="contact_list_frame">
  <div class="divide-y divide-gray-100">
    <% if contacts.any? %>
      <% contacts.each do |contact| %>
        <div id="contact_row_<%= contact.id %>" class="p-4 hover:bg-gray-50 transition-colors">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4 flex-1">
              <!-- Avatar -->
              <div class="flex-shrink-0">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-orange-500 to-orange-600 flex items-center justify-center text-white font-bold">
                  <%= contact.name&.first&.upcase || "?" %>
                </div>
              </div>
              
              <!-- Info -->
              <div class="flex-1 min-w-0">
                <div class="flex items-center space-x-2">
                  <span class="text-sm font-medium text-gray-900 truncate"><%= contact.name %></span>
                  <span class="text-xs text-gray-500"><%= contact.code %></span>
                  <% if contact.next_appointment %>
                    <% days_until = (contact.next_appointment.to_date - Date.current).to_i %>
                    <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium rounded-full bg-orange-100 text-orange-700">
                      <i class="fa-solid fa-calendar-days mr-1"></i>
                      Hẹn sau <%= days_until %> ngày
                    </span>
                  <% end %>
                </div>
                <div class="mt-1 flex items-center space-x-4 text-xs text-gray-500">
                  <span><i class="fa-solid fa-phone mr-1"></i><%= contact.phone || "N/A" %></span>
                  <span><i class="fa-solid fa-folder mr-1"></i><%= contact.service_type&.name || "N/A" %></span>
                  <span><i class="fa-solid fa-user mr-1"></i><%= contact.assigned_user&.name || "Chưa gán" %></span>
                  <% if contact.next_appointment %>
                    <span><i class="fa-solid fa-calendar mr-1"></i><%= contact.next_appointment.strftime("%d/%m/%Y") %></span>
                  <% end %>
                </div>
              </div>
            </div>
            
            <!-- Actions -->
            <div class="flex items-center space-x-2">
              <%= link_to contact_path(contact), class: "text-gray-400 hover:text-gray-600 p-2" do %>
                <i class="fa-solid fa-eye"></i>
              <% end %>
              <%= link_to edit_contact_path(contact), class: "inline-flex items-center px-3 py-1.5 text-xs font-medium rounded-lg bg-orange-500 text-white hover:bg-orange-600 transition-colors" do %>
                <i class="fa-solid fa-pen mr-1"></i> Chỉnh sửa
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      
      <!-- Pagination -->
      <% if contacts.respond_to?(:total_pages) && contacts.total_pages > 1 %>
        <div class="p-4 flex justify-center">
          <%= paginate contacts, theme: 'tailwind' %>
        </div>
      <% end %>
    <% else %>
      <div class="p-12 text-center">
        <div class="text-gray-400">
          <i class="fa-solid fa-calendar-check text-4xl text-green-400 mb-3"></i>
          <p class="text-lg font-medium text-gray-600">Không có contact nào có lịch hẹn quá xa</p>
          <p class="text-sm text-gray-500 mt-1">Tất cả lịch hẹn trong khoảng <%= Setting.max_appointment_days %> ngày.</p>
        </div>
      </div>
    <% end %>
  </div>
</turbo-frame>
