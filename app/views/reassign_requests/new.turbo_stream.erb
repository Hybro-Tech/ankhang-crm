<%# TASK-052: Reassign Request Form Error - Turbo Stream Response %>

<%# Re-render the modal with errors %>
<%= turbo_stream.replace "reassign_modal" do %>
  <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/50" 
       data-controller="modal"
       role="dialog"
       aria-modal="true"
       aria-labelledby="modal-title">
    <div class="bg-white rounded-xl shadow-xl w-full max-w-lg mx-4 transform transition-all">
      <%# Header %>
      <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
        <h3 id="modal-title" class="text-lg font-semibold text-gray-900">Chuyển / Gỡ phân công</h3>
        <%= link_to contacts_path, 
           class: "p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500", 
           data: { turbo_frame: "_top" },
           aria_label: "Đóng modal" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        <% end %>
      </div>

      <%# Contact Info Card %>
      <div class="px-6 py-4">
        <div class="bg-gray-50 rounded-lg p-4 mb-4 border border-gray-100">
          <div class="grid grid-cols-2 gap-3 text-sm">
            <div>
              <span class="text-gray-500 text-xs uppercase tracking-wide">Mã KH</span>
              <p class="font-semibold text-gray-900 mt-0.5"><%= @contact.code %></p>
            </div>
            <div>
              <span class="text-gray-500 text-xs uppercase tracking-wide">Tên</span>
              <p class="font-semibold text-gray-900 mt-0.5"><%= @contact.name %></p>
            </div>
          </div>
        </div>

        <%= form_with model: [@contact, @reassign_request || ReassignRequest.new], 
                      data: { controller: "reassign-form" } do |f| %>
          
          <%# New Owner Select %>
          <div class="mb-4" data-reassign-form-target="toUserField">
            <%= f.label :to_user_id, class: "block text-sm font-medium text-gray-700 mb-1.5" do %>
              Chuyển cho <span class="text-red-500">*</span>
            <% end %>
            <%= f.select :to_user_id, 
                         @users.map { |u| ["#{u.name} - #{u.teams.first&.name}", u.id] },
                         { include_blank: "-- Chọn nhân viên --" },
                         class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors cursor-pointer" %>
          </div>

          <%# Reason %>
          <div class="mb-4">
            <%= f.label :reason, class: "block text-sm font-medium text-gray-700 mb-1.5" do %>
              Lý do <span class="text-red-500">*</span>
            <% end %>
            <%= f.text_area :reason, 
                            rows: 3,
                            required: true,
                            placeholder: "Nhập lý do chuyển/gỡ khách hàng...",
                            class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-none" %>
          </div>

          <%# Error messages %>
          <% if @reassign_request&.errors&.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-3 mb-4" role="alert">
              <ul class="text-sm text-red-700 list-disc list-inside">
                <% @reassign_request.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%# Footer Actions %>
          <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
            <%= link_to contacts_path, 
               class: "px-4 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors cursor-pointer",
               data: { turbo_frame: "_top" } do %>
              Hủy bỏ
            <% end %>
            <%= f.submit "Gửi yêu cầu", 
                         class: "px-5 py-2.5 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
