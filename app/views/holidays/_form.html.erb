<%= form_with(model: holiday, local: true, class: "space-y-6") do |f| %>
  <% if holiday.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
      <div class="flex">
        <div class="flex-shrink-0">
          <i class="fa-solid fa-circle-exclamation text-red-500"></i>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(holiday.errors.count, "lỗi") %> ngăn cản việc lưu:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% holiday.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white p-6 rounded-lg shadow space-y-4 max-w-2xl mx-auto">
    <div>
      <%= f.label :name, "Tên ngày lễ", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-brand-blue outline-none", placeholder: "VD: Tết Nguyên Đán", required: true %>
    </div>

    <div>
      <%= f.label :date, "Ngày", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :date, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-brand-blue outline-none", required: true, data: { controller: "datepicker" } %>
    </div>

    <div>
      <%= f.label :description, "Mô tả / Ghi chú", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :description, rows: 3, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-brand-blue outline-none" %>
    </div>
  </div>

  <div class="flex items-center justify-end space-x-4 max-w-2xl mx-auto">
    <%= link_to "Hủy bỏ", holidays_path, class: "px-6 py-2.5 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-medium transition-colors" %>
    <%= f.submit holiday.new_record? ? "Tạo ngày nghỉ" : "Cập nhật", class: "px-6 py-2.5 bg-[#0B387A] text-white rounded-lg hover:bg-blue-900 font-medium shadow-lg shadow-blue-500/30 transition-colors cursor-pointer" %>
  </div>
<% end %>
