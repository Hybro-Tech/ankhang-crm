<%# TASK-019: Service Type Form Partial %>
<%= form_with(model: @service_type, class: "space-y-6") do |f| %>
  <% if @service_type.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
      <div class="flex items-center gap-2 text-red-800 font-medium">
        <i class="fa-solid fa-circle-exclamation"></i>
        <span>Có <%= pluralize(@service_type.errors.count, "lỗi") %> cần sửa:</span>
      </div>
      <ul class="mt-2 ml-6 list-disc text-sm text-red-700">
        <% @service_type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <%# Tên loại nhu cầu %>
    <div class="md:col-span-2">
      <%= f.label :name, "Tên loại nhu cầu *", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, 
          class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors",
          placeholder: "VD: Thành lập công ty, Kế toán thuế..." %>
    </div>

    <%# Mô tả %>
    <div class="md:col-span-2">
      <%= f.label :description, "Mô tả", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :description, 
          rows: 3,
          class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors",
          placeholder: "Mô tả chi tiết về loại nhu cầu này..." %>
    </div>

    <%# Team mặc định %>
    <div>
      <%= f.label :team_id, "Team mặc định (Smart Routing)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.collection_select :team_id, @teams, :id, :name,
          { include_blank: "-- Không chọn --" },
          { class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors" } %>
      <p class="mt-1 text-xs text-gray-500">Contact có loại nhu cầu này sẽ được gán vào team này</p>
    </div>

    <%# Vị trí sắp xếp %>
    <div>
      <%= f.label :position, "Vị trí sắp xếp", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :position, 
          min: 0,
          class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors",
          placeholder: "0" %>
      <p class="mt-1 text-xs text-gray-500">Số nhỏ hơn sẽ hiển thị trước</p>
    </div>

    <%# Pick Rules Section - TASK-022b %>
    <div class="md:col-span-2 mt-6 pt-6 border-t border-gray-200">
      <h3 class="text-sm font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <i class="fa-solid fa-sliders text-brand-blue"></i>
        Quy tắc nhận khách & Smart Routing
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <%# Max picks per day %>
        <div>
          <%= f.label :max_pick_per_day, "Số lượng tối đa/ngày", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :max_pick_per_day, 
              min: 1, max: 100,
              class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors" %>
          <p class="mt-1 text-xs text-gray-500">Mỗi Sale được nhận tối đa bao nhiêu khách loại này trong 1 ngày</p>
        </div>

        <%# Cooldown minutes %>
        <div>
          <%= f.label :pick_cooldown_minutes, "Chờ giữa 2 lần pick (phút)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :pick_cooldown_minutes, 
              min: 0, max: 60,
              class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors" %>
          <p class="mt-1 text-xs text-gray-500">Sau khi pick 1 KH, phải chờ X phút mới được pick tiếp</p>
        </div>

        <%# TASK-053: Visibility expand interval %>
        <div>
          <%= f.label :visibility_expand_minutes, "Thời gian random (phút)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :visibility_expand_minutes, 
              min: 1, max: 30,
              class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue transition-colors" %>
          <p class="mt-1 text-xs text-gray-500">Nếu chưa ai pick, cứ X phút random thêm 1 Sale được thấy</p>
        </div>
      </div>
    </div>

    <%# Trạng thái %>
    <div class="md:col-span-2">
      <div class="flex items-center gap-3">
        <%= f.check_box :active, class: "h-4 w-4 text-brand-blue focus:ring-brand-blue border-gray-300 rounded" %>
        <%= f.label :active, "Đang sử dụng", class: "text-sm font-medium text-gray-700" %>
      </div>
      <p class="mt-1 text-xs text-gray-500 ml-7">Bỏ chọn để ẩn loại nhu cầu này khỏi dropdown</p>
    </div>
  </div>

  <%# Actions %>
  <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-200">
    <%= link_to service_types_path, class: "px-4 py-2.5 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 font-medium transition-colors" do %>
      Hủy
    <% end %>
    <%= f.submit @service_type.persisted? ? "Cập nhật" : "Tạo mới", 
        class: "px-6 py-2.5 bg-brand-blue hover:bg-blue-800 text-white rounded-lg font-medium transition-colors cursor-pointer" %>
  </div>
<% end %>
