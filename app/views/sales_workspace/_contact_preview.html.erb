<turbo-frame id="contact_preview_frame">
<div class="bg-white">  
  <!-- Contact Header -->
  <div class="px-6 py-6 bg-gradient-to-r from-blue-50 to-white border-b border-gray-100">
    <div class="flex items-center space-x-4">
      <div class="flex-shrink-0 h-16 w-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center text-white font-bold text-2xl shadow-lg">
        <%= contact.name.first.upcase %>
      </div>
      <div class="flex-1">
        <h3 class="text-xl font-bold text-gray-900"><%= contact.name %></h3>
        <p class="text-sm text-gray-500"><%= contact.code %></p>
        <div class="mt-2 flex items-center space-x-2">
          <% status_colors = {
            'new_contact' => 'bg-blue-100 text-blue-800',
            'potential' => 'bg-yellow-100 text-yellow-800',
            'in_progress' => 'bg-green-100 text-green-800',
            'closed_new' => 'bg-emerald-100 text-emerald-800',
            'failed' => 'bg-red-100 text-red-800'
          } %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_colors[contact.status] || 'bg-gray-100 text-gray-800' %>">
            <%= contact.status_label %>
          </span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
            <%= contact.service_type&.name || "Chưa xác định" %>
          </span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Contact Info Section -->
  <div class="px-6 py-6 space-y-6">
    <!-- Basic Information -->
    <div>
      <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">
        <i class="fa-solid fa-user text-brand-blue mr-2"></i>Thông tin liên hệ
      </h4>
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs text-gray-500 uppercase font-medium mb-1">Số điện thoại</p>
          <a href="tel:<%= contact.phone %>" class="text-sm text-brand-blue hover:underline font-medium flex items-center">
            <i class="fa-solid fa-phone text-gray-400 mr-2"></i><%= contact.phone %>
          </a>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs text-gray-500 uppercase font-medium mb-1">Email</p>
          <% if contact.email.present? %>
            <a href="mailto:<%= contact.email %>" class="text-sm text-brand-blue hover:underline flex items-center">
              <i class="fa-solid fa-envelope text-gray-400 mr-2"></i><%= contact.email %>
            </a>
          <% else %>
            <span class="text-sm text-gray-400 italic">Chưa có</span>
          <% end %>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs text-gray-500 uppercase font-medium mb-1">Zalo</p>
          <% if contact.zalo_link.present? %>
            <a href="<%= contact.zalo_link %>" target="_blank" class="text-sm text-brand-blue hover:underline flex items-center">
              <i class="fa-solid fa-message text-gray-400 mr-2"></i>Mở Zalo
            </a>
          <% else %>
            <span class="text-sm text-gray-400 italic">Chưa có</span>
          <% end %>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs text-gray-500 uppercase font-medium mb-1">Nguồn khách</p>
          <p class="text-sm text-gray-700 flex items-center">
            <i class="fa-solid fa-share-nodes text-gray-400 mr-2"></i><%= contact.source || "Không xác định" %>
          </p>
        </div>
      </div>
    </div>

    <!-- Additional Information -->
    <div>
      <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">
        <i class="fa-solid fa-circle-info text-green-500 mr-2"></i>Thông tin quản lý
      </h4>
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs text-gray-500 uppercase font-medium mb-1">Nhân viên phụ trách</p>
          <p class="text-sm text-gray-700 flex items-center">
            <i class="fa-solid fa-user-tie text-gray-400 mr-2"></i><%= contact.assigned_user&.name || "Chưa phân công" %>
          </p>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs text-gray-500 uppercase font-medium mb-1">Đội/Nhóm</p>
          <p class="text-sm text-gray-700 flex items-center">
            <i class="fa-solid fa-people-group text-gray-400 mr-2"></i><%= contact.team&.name || "Chưa xác định" %>
          </p>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs text-gray-500 uppercase font-medium mb-1">Ngày tạo</p>
          <p class="text-sm text-gray-700 flex items-center">
            <i class="fa-solid fa-calendar-plus text-gray-400 mr-2"></i><%= contact.created_at.strftime("%d/%m/%Y %H:%M") %>
          </p>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs text-gray-500 uppercase font-medium mb-1">Cập nhật lần cuối</p>
          <p class="text-sm text-gray-700 flex items-center">
            <i class="fa-solid fa-clock-rotate-left text-gray-400 mr-2"></i><%= time_ago_in_words(contact.updated_at) %> trước
          </p>
        </div>
      </div>
    </div>

    <!-- Appointment Info -->
    <% if contact.next_appointment.present? %>
      <div>
        <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">
          <i class="fa-solid fa-calendar-check text-orange-500 mr-2"></i>Lịch hẹn tiếp theo
        </h4>
        <div class="bg-orange-50 rounded-lg p-4 border border-orange-100">
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-orange-100 flex flex-col items-center justify-center text-orange-600 border border-orange-200">
              <span class="text-sm font-bold"><%= contact.next_appointment.strftime("%d") %></span>
              <span class="text-[10px] uppercase"><%= contact.next_appointment.strftime("%b") %></span>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-900"><%= contact.next_appointment.strftime("%A, %d/%m/%Y") %></p>
              <p class="text-xs text-gray-500"><%= contact.next_appointment.strftime("%H:%M") %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Notes -->
    <% if contact.notes.present? %>
      <div>
        <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">
          <i class="fa-solid fa-sticky-note text-yellow-500 mr-2"></i>Ghi chú
        </h4>
        <div class="bg-yellow-50 rounded-lg p-4 border border-yellow-100">
          <p class="text-sm text-gray-700 whitespace-pre-wrap"><%= contact.notes %></p>
        </div>
      </div>
    <% end %>

    <!-- Quick Actions -->
    <div class="pt-4 border-t border-gray-100 space-y-3">
      <a href="tel:<%= contact.phone %>" 
         class="w-full inline-flex items-center justify-center px-4 py-3 bg-green-500 text-white text-sm font-medium rounded-lg hover:bg-green-600 transition-colors shadow-sm">
        <i class="fa-solid fa-phone mr-2"></i>Gọi ngay
      </a>
      <div class="grid grid-cols-2 gap-3">
        <%= link_to edit_contact_path(contact), 
            data: { turbo_frame: "_top" },
            class: "inline-flex items-center justify-center px-4 py-2.5 bg-white text-gray-700 text-sm font-medium rounded-lg border border-gray-300 hover:bg-gray-50 transition-colors" do %>
          <i class="fa-solid fa-pen mr-2"></i>Cập nhật
        <% end %>
        <%= link_to contact_path(contact), 
            data: { turbo_frame: "_top" },
            class: "inline-flex items-center justify-center px-4 py-2.5 bg-brand-blue text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors" do %>
          <i class="fa-solid fa-arrow-right mr-2"></i>Xem đầy đủ
        <% end %>
      </div>
    </div>
  </div>
</div>
</turbo-frame>
