<turbo-frame id="contact_preview_frame">
<div class="bg-white">  
  <!-- Contact Header -->
  <div class="px-6 py-6 bg-gradient-to-r from-blue-50 to-white border-b border-gray-100">
    <div class="flex items-center space-x-4">
      <div class="flex-shrink-0 h-16 w-16 rounded-full flex items-center justify-center text-white font-bold text-2xl shadow-lg" style="background: linear-gradient(to bottom right, #3b82f6, #2563eb);">
        <%= contact.name.first.upcase %>
      </div>
      <div class="flex-1">
        <h3 class="text-xl font-bold text-gray-900"><%= contact.name %></h3>
        <p class="text-sm text-gray-500"><%= contact.code %></p>
        <div class="mt-2 flex items-center space-x-2">
          <%# TASK-064: Simplified to 4 statuses %>
          <% status_colors = {
            'new_contact' => 'bg-blue-100 text-blue-800',
            'potential' => 'bg-teal-100 text-teal-800',
            'failed' => 'bg-red-100 text-red-800',
            'closed' => 'bg-green-100 text-green-800'
          } %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_colors[contact.status] || 'bg-gray-100 text-gray-800' %>">
            <%= contact.status_label %>
          </span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
            <%= contact.service_type&.name || "Chưa xác định" %>
          </span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Contact Info Section -->
  <div class="px-6 py-6 space-y-6">
    
    <%# TASK-UI: Primary Action Zone - Show Phone OR Zalo based on identity_source from DB %>
    <% is_zalo_primary = contact.identity_source == 'zalo' %>
    
    <!-- PRIMARY ACTION ZONE -->
    <div class="bg-gradient-to-br from-blue-50 to-white rounded-xl border-2 border-blue-100 p-5">
      <h4 class="text-xs font-bold text-blue-600 uppercase tracking-wider mb-4 flex items-center">
        <i class="fa-solid fa-bolt mr-2"></i>Liên hệ nhanh
      </h4>
      
      <% if is_zalo_primary %>
        <%# === ZALO MODE: Show Zalo ID + QR Code + Copy Button === %>
        <div class="space-y-4">
          <!-- Zalo ID with Copy Button -->
          <div class="flex items-center justify-between bg-white rounded-xl p-4 border border-blue-200 shadow-sm">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center shadow-md">
                <span class="text-white font-bold text-lg">Z</span>
              </div>
              <div>
                <p class="text-xs text-gray-500 font-medium">Zalo ID</p>
                <p class="text-xl font-bold text-gray-900 tracking-wide"><%= contact.zalo_id %></p>
              </div>
            </div>
            <div class="flex items-center space-x-2">
              <% if contact.zalo_link.present? %>
                <a href="<%= contact.zalo_link %>" target="_blank" 
                   class="inline-flex items-center justify-center w-10 h-10 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors shadow-sm cursor-pointer"
                   title="Mở Zalo">
                  <i class="fa-solid fa-external-link-alt"></i>
                </a>
              <% end %>
              <button type="button" 
                      data-controller="clipboard"
                      data-clipboard-text-value="<%= contact.zalo_id %>"
                      data-action="click->clipboard#copy"
                      class="inline-flex items-center justify-center w-10 h-10 bg-gray-100 text-gray-600 rounded-lg hover:bg-gray-200 transition-colors cursor-pointer"
                      title="Copy Zalo ID">
                <i class="fa-solid fa-copy"></i>
              </button>
            </div>
          </div>
          
          <%# QR Code Display - Large & Centered for easy scanning %>
          <% if contact.zalo_qr.attached? && contact.zalo_qr.blob.present? %>
            <div class="flex flex-col items-center justify-center bg-gradient-to-br from-blue-50 to-white rounded-2xl p-6 border-2 border-blue-200 shadow-lg">
              <p class="text-sm font-semibold text-blue-600 mb-3 flex items-center">
                <i class="fa-solid fa-qrcode mr-2"></i>Quét mã QR để liên hệ Zalo
              </p>
              <div class="bg-white rounded-xl p-4 border-2 border-gray-300 shadow-inner flex items-center justify-center" style="width: 220px; height: 220px;">
                <%= image_tag qr_code_contact_path(contact), class: "w-48 h-48 object-contain", alt: "Zalo QR Code" %>
              </div>
              <p class="text-xs text-gray-500 mt-3 text-center">Mở ứng dụng Zalo → Quét mã QR</p>
            </div>
          <% end %>
        </div>
        
      <% else %>
        <%# === PHONE MODE: Show Phone Number prominently === %>
        <div class="flex items-center justify-between bg-white rounded-xl p-4 border border-green-200 shadow-sm">
          <div class="flex items-center space-x-3">
            <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center shadow-md">
              <i class="fa-solid fa-phone text-white text-lg"></i>
            </div>
            <div>
              <p class="text-xs text-gray-500 font-medium">Số điện thoại</p>
              <a href="tel:<%= contact.phone %>" class="text-2xl font-bold text-gray-900 tracking-wider hover:text-green-600 transition-colors">
                <%= contact.phone %>
              </a>
            </div>
          </div>
          <div class="flex items-center space-x-2">
            <a href="tel:<%= contact.phone %>" 
               class="inline-flex items-center justify-center px-5 py-2.5 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors shadow-sm font-medium cursor-pointer">
              <i class="fa-solid fa-phone mr-2"></i>Gọi
            </a>
            <button type="button"
                    data-controller="clipboard"
                    data-clipboard-text-value="<%= contact.phone %>"
                    data-action="click->clipboard#copy"
                    class="inline-flex items-center justify-center w-10 h-10 bg-gray-100 text-gray-600 rounded-lg hover:bg-gray-200 transition-colors cursor-pointer"
                    title="Copy số điện thoại">
              <i class="fa-solid fa-copy"></i>
            </button>
          </div>
        </div>
        
        <%# Show Zalo as secondary if available %>
        <% if contact.zalo_id.present? || contact.zalo_qr.attached? %>
          <div class="mt-4 pt-4 border-t border-gray-100">
            <p class="text-xs text-gray-500 font-medium mb-2">Zalo (phụ)</p>
            <div class="flex items-center space-x-3">
              <% if contact.zalo_id.present? %>
                <span class="text-sm text-gray-700 font-medium"><%= contact.zalo_id %></span>
                <button type="button"
                        data-controller="clipboard"
                        data-clipboard-text-value="<%= contact.zalo_id %>"
                        data-action="click->clipboard#copy"
                        class="text-gray-400 hover:text-gray-600 cursor-pointer"
                        title="Copy Zalo ID">
                  <i class="fa-solid fa-copy text-sm"></i>
                </button>
              <% end %>
              <% if contact.zalo_qr.attached? && contact.zalo_qr.blob.present? %>
                <a href="<%= qr_code_contact_path(contact) %>" 
                   target="_blank"
                   class="text-xs text-brand-blue hover:underline cursor-pointer">
                  <i class="fa-solid fa-qrcode mr-1"></i>Xem QR
                </a>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Secondary Info (smaller) -->
    <div>
      <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">
        <i class="fa-solid fa-circle-info text-gray-400 mr-2"></i>Thông tin khác
      </h4>
      <div class="bg-gray-50 rounded-lg p-3">
        <p class="text-xs text-gray-500 font-medium mb-1">Email</p>
        <% if contact.email.present? %>
          <a href="mailto:<%= contact.email %>" class="text-sm text-brand-blue hover:underline truncate block">
            <%= contact.email %>
          </a>
        <% else %>
          <span class="text-sm text-gray-400 italic">Chưa có</span>
        <% end %>
      </div>
    </div>

    <!-- Additional Information -->
    <div>
      <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">
        <i class="fa-solid fa-circle-info text-green-500 mr-2"></i>Thông tin quản lý
      </h4>
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs text-gray-500 uppercase font-medium mb-1">Nhân viên phụ trách</p>
          <p class="text-sm text-gray-700 flex items-center">
            <i class="fa-solid fa-user-tie text-gray-400 mr-2"></i><%= contact.assigned_user&.name || "Chưa phân công" %>
          </p>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs text-gray-500 uppercase font-medium mb-1">Đội/Nhóm</p>
          <p class="text-sm text-gray-700 flex items-center">
            <i class="fa-solid fa-people-group text-gray-400 mr-2"></i><%= contact.team&.name || "Chưa xác định" %>
          </p>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs text-gray-500 uppercase font-medium mb-1">Ngày tạo</p>
          <p class="text-sm text-gray-700 flex items-center">
            <i class="fa-solid fa-calendar-plus text-gray-400 mr-2"></i><%= contact.created_at.strftime("%d/%m/%Y %H:%M") %>
          </p>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs text-gray-500 uppercase font-medium mb-1">Cập nhật lần cuối</p>
          <p class="text-sm text-gray-700 flex items-center">
            <i class="fa-solid fa-clock-rotate-left text-gray-400 mr-2"></i><%= time_ago_in_words(contact.updated_at) %> trước
          </p>
        </div>
      </div>
    </div>

    <!-- Appointment Info -->
    <% if contact.next_appointment.present? %>
      <div>
        <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">
          <i class="fa-solid fa-calendar-check text-orange-500 mr-2"></i>Lịch hẹn tiếp theo
        </h4>
        <div class="bg-orange-50 rounded-lg p-4 border border-orange-100">
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-orange-100 flex flex-col items-center justify-center text-orange-600 border border-orange-200">
              <span class="text-sm font-bold"><%= contact.next_appointment.strftime("%d") %></span>
              <span class="text-[10px] uppercase"><%= contact.next_appointment.strftime("%b") %></span>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-900"><%= contact.next_appointment.strftime("%A, %d/%m/%Y") %></p>
              <p class="text-xs text-gray-500"><%= contact.next_appointment.strftime("%H:%M") %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Notes -->
    <% if contact.notes.present? %>
      <div>
        <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">
          <i class="fa-solid fa-sticky-note text-yellow-500 mr-2"></i>Ghi chú
        </h4>
        <div class="bg-yellow-50 rounded-lg p-4 border border-yellow-100">
          <p class="text-sm text-gray-700 whitespace-pre-wrap"><%= contact.notes %></p>
        </div>
      </div>
    <% end %>

    <!-- Quick Actions -->
    <div class="pt-4 border-t border-gray-100">
      <div class="grid grid-cols-2 gap-3">
        <%= link_to edit_contact_path(contact), 
            data: { turbo_frame: "_top" },
            class: "inline-flex items-center justify-center px-4 py-2.5 bg-white text-gray-700 text-sm font-medium rounded-lg border border-gray-300 hover:bg-gray-50 transition-colors" do %>
          <i class="fa-solid fa-pen mr-2"></i>Cập nhật
        <% end %>
        <%= link_to contact_path(contact), 
            data: { turbo_frame: "_top" },
            class: "inline-flex items-center justify-center px-4 py-2.5 bg-brand-blue text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors" do %>
          <i class="fa-solid fa-arrow-right mr-2"></i>Xem đầy đủ
        <% end %>
      </div>
    </div>
  </div>
</div>
</turbo-frame>
