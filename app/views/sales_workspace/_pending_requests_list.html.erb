<%# TASK-052: Pending Requests List for Team Leaders - UI/UX Pro Max Reviewed %>
<turbo-frame id="contact_list_frame">
<div class="divide-y divide-gray-100" data-controller="workspace-reject">
  <% if @reassign_requests.any? %>
    <% @reassign_requests.each do |request| %>
      <div class="p-4 hover:bg-blue-50/50 transition-colors cursor-pointer" 
           id="<%= dom_id(request) %>"
           role="article"
           aria-label="Yêu cầu <%= request.reassign? ? 'chuyển' : 'gỡ' %> KH <%= request.contact.code %>">
        <%# Header with ID and time %>
        <div class="flex items-center justify-between mb-2">
          <div class="flex items-center gap-2 text-xs">
            <span class="font-mono text-gray-500">#REQ-<%= request.id.to_s.rjust(3, '0') %></span>
            <span class="text-gray-300" aria-hidden="true">•</span>
            <time class="text-gray-500" datetime="<%= request.created_at.iso8601 %>">
              <%= time_ago_in_words(request.created_at) %> trước
            </time>
          </div>
          <span class="inline-flex items-center gap-1 px-2 py-0.5 text-xs font-medium rounded-full 
                       <%= request.reassign? ? 'bg-amber-100 text-amber-700' : 'bg-rose-100 text-rose-700' %>">
            <% if request.reassign? %>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
              </svg>
            <% else %>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7a4 4 0 11-8 0 4 4 0 018 0zM9 14a6 6 0 00-6 6v1h12v-1a6 6 0 00-6-6zM21 12h-6"></path>
              </svg>
            <% end %>
            <%= request.reassign? ? "Chuyển KH" : "Gỡ KH" %>
          </span>
        </div>

        <%# Contact Info %>
        <div class="mb-2">
          <p class="font-semibold text-gray-900 text-sm">
            <span class="text-brand-blue"><%= request.contact.code %></span>
            <span class="text-gray-400 font-normal mx-1">-</span>
            <%= request.contact.name %>
          </p>
          <div class="flex items-center gap-1.5 text-xs text-gray-600 mt-1">
            <span class="flex items-center gap-1">
              <svg class="w-3.5 h-3.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <%= request.from_user.name %>
            </span>
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
            <% if request.reassign? && request.to_user %>
              <span class="flex items-center gap-1">
                <svg class="w-3.5 h-3.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <%= request.to_user.name %>
              </span>
            <% else %>
              <span class="flex items-center gap-1 text-amber-600 font-medium">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                </svg>
                Pool
              </span>
            <% end %>
          </div>
        </div>

        <%# Reason %>
        <p class="text-xs text-gray-500 mb-3 line-clamp-2">
          <span class="font-medium text-gray-600">Lý do:</span> <%= request.reason %>
        </p>

        <%# Requester %>
        <p class="text-xs text-gray-400 mb-3">
          Yêu cầu bởi: <span class="text-gray-600"><%= request.requested_by.name %></span>
        </p>

        <%# Actions %>
        <div class="flex items-center gap-2">
          <%= button_to approve_teams_reassign_request_path(request),
                        method: :post,
                        class: "inline-flex items-center gap-1.5 px-3.5 py-2 text-xs font-semibold text-white bg-green-600 rounded-lg hover:bg-green-700 transition-colors cursor-pointer focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-1",
                        data: { turbo_confirm: "Xác nhận duyệt yêu cầu #{request.reassign? ? 'chuyển' : 'gỡ'} KH này?" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Duyệt
          <% end %>
          <button type="button"
                  class="inline-flex items-center gap-1.5 px-3.5 py-2 text-xs font-semibold text-red-600 bg-white border border-red-300 rounded-lg hover:bg-red-50 transition-colors cursor-pointer focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-1"
                  data-action="click->workspace-reject#open"
                  data-request-id="<%= request.id %>"
                  data-reject-url="<%= reject_teams_reassign_request_path(request) %>">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Từ chối
          </button>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="p-10 text-center">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 mb-4">
        <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <p class="text-sm font-semibold text-gray-700">Không có yêu cầu chờ duyệt</p>
      <p class="text-xs text-gray-500 mt-1">Tất cả yêu cầu đã được xử lý</p>
    </div>
  <% end %>

  <%# Reject Modal %>
  <div data-workspace-reject-target="modal" 
       class="hidden fixed inset-0 z-50 flex items-center justify-center"
       role="dialog"
       aria-modal="true"
       aria-labelledby="reject-modal-title">
    <%# Backdrop %>
    <div data-workspace-reject-target="backdrop"
         data-action="click->workspace-reject#close"
         class="absolute inset-0 bg-black/50 cursor-pointer"></div>
    
    <%# Modal Content %>
    <div class="relative bg-white rounded-xl shadow-xl w-full max-w-md mx-4 z-10">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 id="reject-modal-title" class="text-lg font-semibold text-gray-900">Từ chối yêu cầu</h3>
      </div>
      
      <%= form_with url: "#", method: :post, data: { workspace_reject_target: "form", action: "submit->workspace-reject#submit" } do |f| %>
        <div class="px-6 py-4">
          <label for="rejection_reason" class="block text-sm font-medium text-gray-700 mb-2">
            Lý do từ chối <span class="text-red-500">*</span>
          </label>
          <textarea id="rejection_reason"
                    name="rejection_reason"
                    rows="3"
                    required
                    data-workspace-reject-target="reason"
                    placeholder="Nhập lý do từ chối yêu cầu này..."
                    class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors resize-none"></textarea>
        </div>
        
        <div class="px-6 py-4 border-t border-gray-200 flex justify-end gap-3">
          <button type="button"
                  data-action="click->workspace-reject#close"
                  class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors cursor-pointer">
            Hủy
          </button>
          <button type="submit"
                  class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 transition-colors cursor-pointer focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
            Xác nhận từ chối
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
</turbo-frame>
