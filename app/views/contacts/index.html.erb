<%# TASK-020: Contacts Index with Turbo Frame Filtering %>
<% content_for :page_title, "Quản lý Khách hàng" %>

<div class="flex flex-col gap-6">
  <%# Header %>
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Quản lý Khách hàng</h1>
      <p class="text-sm text-gray-500 mt-1">Danh sách tất cả khách hàng trong hệ thống</p>
    </div>
    <% if can?(:create, Contact) %>
      <%= link_to new_contact_path, class: "inline-flex items-center gap-2 bg-brand-blue hover:bg-blue-800 text-white px-4 py-2.5 rounded-lg font-medium transition-colors shadow-sm" do %>
        <i class="fa-solid fa-plus"></i>
        <span>Thêm khách hàng</span>
      <% end %>
    <% end %>
  </div>

  <%# Filters - Turbo Frame %>
  <%= form_with url: contacts_path, method: :get, data: { turbo_frame: "contacts_list", controller: "filter-form", action: "change->filter-form#submit" } do |f| %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
      <div class="flex flex-wrap gap-4">
        <%# Search %>
        <div class="flex-1 min-w-[200px]">
          <div class="relative">
            <i class="fa-solid fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
            <%= text_field_tag :q, params[:q], 
                placeholder: "Tìm theo tên, SĐT, mã...", 
                class: "w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue",
                data: { action: "input->filter-form#debounce" } %>
          </div>
        </div>
        
        <%# Status filter %>
        <%= select_tag :status, 
            options_for_select(
              [["Tất cả trạng thái", ""]] + @statuses.map { |s| [t("contacts.status.#{s}"), s] }, 
              params[:status]
            ),
            class: "px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue" %>
        
        <%# Team filter %>
        <%= select_tag :team_id, 
            options_for_select(
              [["Tất cả team", ""]] + @teams.map { |t| [t.name, t.id] }, 
              params[:team_id]
            ),
            class: "px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue" %>
        
        <%# Service Type filter %>
        <%= select_tag :service_type_id, 
            options_for_select(
              [["Tất cả loại nhu cầu", ""]] + @service_types_filter.map { |st| [st.name, st.id] }, 
              params[:service_type_id]
            ),
            class: "px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue" %>
        
        <%# Reset button %>
        <% if params[:q].present? || params[:status].present? || params[:team_id].present? || params[:service_type_id].present? %>
          <%= link_to contacts_path, class: "px-4 py-2 text-gray-600 hover:text-gray-900 flex items-center gap-1" do %>
            <i class="fa-solid fa-times"></i> Xóa lọc
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Contacts Table - Turbo Frame %>
  <%= turbo_frame_tag "contacts_list" do %>
    
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Mã KH</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Tên</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">SĐT</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Zalo</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Order</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Loại nhu cầu</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Trạng thái</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Người phụ trách</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Ngày tạo</th>
              <th class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">Thao tác</th>
            </tr>
          </thead>
          <tbody id="contacts_table_body" class="bg-white divide-y divide-gray-200">
            <% if @contacts.any? %>
              <% @contacts.each do |contact| %>
                <%= render "contacts/contact_row", contact: contact %>
              <% end %>
            <% else %>
              <tr>
                <td colspan="10" class="px-6 py-12 text-center">
                  <div class="flex flex-col items-center gap-2">
                    <i class="fa-solid fa-address-book text-4xl text-gray-300"></i>
                    <p class="text-gray-500">
                      <% if params[:q].present? || params[:status].present? %>
                        Không tìm thấy khách hàng phù hợp
                      <% else %>
                        Chưa có khách hàng nào
                      <% end %>
                    </p>
                    <% if can?(:create, Contact) && params[:q].blank? %>
                      <%= link_to new_contact_path, class: "text-brand-blue hover:underline" do %>
                        <i class="fa-solid fa-plus mr-1"></i>Thêm khách hàng đầu tiên
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <%# Pagination %>
      <% if @contacts.respond_to?(:total_pages) %>
        <%= render "shared/pagination", collection: @contacts, entry_name: "khách hàng" %>
      <% end %>
    </div>
  <% end %>
</div>
