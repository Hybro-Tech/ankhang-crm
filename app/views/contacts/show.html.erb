<%# TASK-023: Contact Detail with Interactions Timeline %>
<%# Based on wireframe: docs/ui-design/wireframes/contact_detail.html %>
<% content_for :page_title, "Chi tiết khách hàng #{@contact.code}" %>

<%# Status Progress Bar %>
<%= render "contacts/partials/status_progress", contact: @contact %>

<%# Status Changer - TASK-051 %>
<% if can?(:edit, @contact) %>
  <div class="bg-white px-6 py-3 border-b border-gray-200 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <span class="text-sm text-gray-500">Trạng thái hiện tại:</span>
      <%= render "contacts/partials/status_changer", contact: @contact %>
    </div>
    <div class="text-xs text-gray-400">
      Cập nhật: <%= time_ago_in_words(@contact.updated_at) %> trước
    </div>
  </div>
<% end %>

<div class="flex-1 overflow-auto bg-gray-50 p-6">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

    <%# Left Column: Customer Info Card %>
    <div class="lg:col-span-1 space-y-6">
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h3 class="text-sm font-bold text-gray-400 uppercase tracking-wider mb-4">Thông tin Khách hàng</h3>

        <%# Avatar & Name %>
        <div class="flex items-center mb-6">
          <div class="h-16 w-16 rounded-full bg-teal-100 flex items-center justify-center text-teal-600 text-2xl font-bold">
            <%= @contact.name.first(2).upcase %>
          </div>
          <div class="ml-4">
            <div class="text-xl font-bold text-gray-900"><%= @contact.name %></div>
            <div class="text-sm text-gray-500"><%= @contact.code %></div>
          </div>
        </div>

        <div class="space-y-4">
          <%# Phone %>
          <div>
            <label class="block text-xs text-gray-400">Số điện thoại</label>
            <div class="flex items-center justify-between mt-1">
              <div class="text-sm font-medium text-gray-900"><%= @contact.phone.presence || "-" %></div>
              <% if @contact.phone.present? %>
                <div class="flex space-x-2">
                  <a href="tel:<%= @contact.phone %>" class="bg-blue-50 text-brand-blue p-1.5 rounded hover:bg-blue-100">
                    <i class="fa-solid fa-phone"></i>
                  </a>
                  <% if @contact.zalo_link.present? %>
                    <a href="<%= @contact.zalo_link %>" target="_blank" class="bg-blue-50 text-brand-blue p-1.5 rounded hover:bg-blue-100">
                      <i class="fa-solid fa-message"></i>
                    </a>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>

          <%# Email %>
          <div>
            <label class="block text-xs text-gray-400">Email</label>
            <div class="text-sm font-medium text-gray-900 mt-1">
              <% if @contact.email.present? %>
                <a href="mailto:<%= @contact.email %>" class="text-brand-blue hover:underline"><%= @contact.email %></a>
              <% else %>
                -
              <% end %>
            </div>
          </div>

          <hr class="border-gray-100">

          <%# Service Type %>
          <div>
            <label class="block text-xs text-gray-400">Nhu cầu</label>
            <div class="inline-flex mt-1 px-2 py-1 bg-teal-100 text-teal-700 text-xs font-semibold rounded">
              <%= @contact.service_type&.name || "-" %>
            </div>
          </div>

          <%# Source %>
          <div>
            <label class="block text-xs text-gray-400">Nguồn</label>
            <div class="text-sm font-medium text-gray-900 mt-1">
              <%= @contact.source_label %>
            </div>
          </div>

          <hr class="border-gray-100">

          <%# Assigned User %>
          <div>
            <label class="block text-xs text-gray-400">Phụ trách (Sale)</label>
            <div class="flex items-center mt-1">
              <% if @contact.assigned_user %>
                <img class="h-6 w-6 rounded-full mr-2" 
                     src="https://ui-avatars.com/api/?name=<%= CGI.escape(@contact.assigned_user.name) %>&background=random" 
                     alt="<%= @contact.assigned_user.name %>">
                <span class="text-sm font-medium text-gray-900"><%= @contact.assigned_user.name %></span>
              <% else %>
                <span class="text-orange-600 text-sm font-medium">Chưa gán</span>
              <% end %>
            </div>
          </div>

          <%# Team %>
          <div>
            <label class="block text-xs text-gray-400">Team</label>
            <div class="text-sm font-medium text-gray-900 mt-1">
              <%= @contact.team&.name || "-" %>
            </div>
          </div>

          <%# Created by %>
          <div>
            <label class="block text-xs text-gray-400">Tạo bởi</label>
            <div class="text-sm text-gray-900 mt-1">
              <%= @contact.creator&.name %> • <%= l(@contact.created_at, format: :long) %>
            </div>
          </div>
        </div>

        <%# Edit button %>
        <% if can?(:edit, @contact) %>
          <div class="mt-6 pt-4 border-t border-gray-100">
            <%= link_to edit_contact_path(@contact), 
                class: "w-full flex items-center justify-center gap-2 bg-brand-blue hover:bg-blue-800 text-white px-4 py-2 rounded-lg font-medium transition-colors" do %>
              <i class="fa-solid fa-pen-to-square"></i>
              <span>Chỉnh sửa</span>
            <% end %>
          </div>
        <% end %>
      </div>

      <%# Notes Card %>
      <% if @contact.notes.present? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <h3 class="text-sm font-bold text-gray-400 uppercase tracking-wider mb-4">Ghi chú</h3>
          <p class="text-gray-700 whitespace-pre-wrap text-sm"><%= @contact.notes %></p>
        </div>
      <% end %>
    </div>

    <%# Right Column: Tabs & Activity %>
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <%# Tabs %>
        <div class="border-b border-gray-200">
          <nav class="flex -mb-px" data-controller="tabs" data-tabs-active-class="text-brand-blue border-brand-blue border-b-2">
            <button class="text-brand-blue border-brand-blue border-b-2 py-4 px-6 text-sm font-medium"
                    data-tabs-target="tab" data-action="click->tabs#select">
              Tương tác
            </button>
            <button class="text-gray-500 hover:text-gray-700 border-transparent hover:border-gray-300 border-b-2 py-4 px-6 text-sm font-medium"
                    data-tabs-target="tab" data-action="click->tabs#select" disabled>
              Deals
              <span class="bg-gray-100 text-gray-600 py-0.5 px-2 rounded-full text-xs ml-2">0</span>
            </button>
            <button class="text-gray-500 hover:text-gray-700 border-transparent hover:border-gray-300 border-b-2 py-4 px-6 text-sm font-medium"
                    data-tabs-target="tab" data-action="click->tabs#select" disabled>
              Tài liệu
            </button>
          </nav>
        </div>

        <div class="p-6">
          <%# Add Interaction Form - Show if user can edit this contact %>
          <% if can?(:edit, @contact) %>
            <%= render "interactions/form", contact: @contact %>
          <% end %>

          <%# Timeline %>
          <%= render "interactions/timeline", interactions: @interactions %>
        </div>
      </div>

      <%# Quick Actions %>
      <div class="flex gap-3">
        <% if @contact.pickable? && can?(:pick, @contact) %>
          <%= button_to pick_contact_path(@contact), 
              method: :post,
              form: { data: { turbo_confirm: "Bạn có chắc muốn nhận khách hàng này?" } },
              class: "flex-1 flex items-center justify-center gap-2 bg-green-600 hover:bg-green-700 text-white px-4 py-3 rounded-lg font-medium shadow-md transition-colors" do %>
            <i class="fa-solid fa-hand-pointer"></i>
            <span>Nhận khách này</span>
          <% end %>
        <% end %>
        
        <%= link_to contacts_path, 
            class: "flex items-center justify-center gap-2 bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-3 rounded-lg font-medium transition-colors" do %>
          <i class="fa-solid fa-arrow-left"></i>
          <span>Quay lại danh sách</span>
        <% end %>
      </div>
    </div>

  </div>
</div>
