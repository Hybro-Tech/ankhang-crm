<%# TASK-019: Contact Form Partial - CRM Best Practices Refactor %>
<%= form_with(model: @contact, class: "space-y-6") do |f| %>
  <% if @contact.errors.any? %>
    <div class="p-4 bg-red-50 border-l-4 border-red-500 rounded-r-lg">
      <div class="flex items-center text-red-800">
        <i class="fa-solid fa-exclamation-triangle mr-2"></i>
        <span class="font-semibold">Có <%= pluralize(@contact.errors.count, "lỗi") %> cần sửa:</span>
      </div>
      <ul class="mt-2 text-sm text-red-700 list-disc list-inside ml-6">
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Section 1: Thông tin cơ bản %>
  <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
    <div class="bg-gradient-to-r from-gray-50 to-white px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 flex items-center">
        <i class="fa-solid fa-user text-brand-blue mr-2"></i>
        Thông tin khách hàng
      </h3>
    </div>
    
    <div class="p-6">
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <%# Tên %>
        <div>
          <%= f.label :name, "Họ tên *", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fa-solid fa-user text-gray-400"></i>
            </div>
            <%= f.text_field :name, 
                class: "w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue outline-none transition-colors",
                placeholder: "Nguyễn Văn A" %>
          </div>
        </div>

        <%# SĐT with real-time duplicate check %>
        <div data-controller="phone-check" data-phone-check-url-value="<%= check_phone_contacts_path %>">
          <%= f.label :phone, "Số điện thoại", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fa-solid fa-phone text-gray-400"></i>
            </div>
            <%= f.telephone_field :phone, 
                class: "w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue outline-none transition-colors",
                placeholder: "0912 345 678",
                data: { phone_check_target: "phone", action: "input->phone-check#check" } %>
          </div>
          <div data-phone-check-target="feedback"></div>
        </div>

        <%# Email %>
        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fa-solid fa-envelope text-gray-400"></i>
            </div>
            <%= f.email_field :email, 
                class: "w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue outline-none transition-colors",
                placeholder: "email@example.com" %>
          </div>
        </div>

        <%# Zalo ID %>
        <div>
          <%= f.label :zalo_id, "Zalo ID / SĐT Zalo", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fa-solid fa-comment-dots text-gray-400"></i>
            </div>
            <%= f.text_field :zalo_id, 
                class: "w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue outline-none transition-colors",
                placeholder: "Nhập Zalo ID..." %>
          </div>
        </div>

        <%# Zalo QR %>
        <div class="sm:col-span-2">
          <%= f.label :zalo_qr, "QR Zalo", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
          <%= f.file_field :zalo_qr, 
              class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2.5 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-brand-blue hover:file:bg-blue-100 transition-colors border border-gray-300 rounded-lg cursor-pointer" %>
        </div>
      </div>

      <div class="mt-4 bg-yellow-50 text-yellow-800 text-sm p-3 rounded-lg flex items-start gap-2">
        <i class="fa-solid fa-lightbulb mt-0.5"></i>
        <span>Lưu ý: Bắt buộc phải nhập ít nhất 1 trong 3 thông tin: <strong>Số điện thoại</strong>, <strong>Zalo ID</strong>, hoặc <strong>Zalo QR</strong>.</span>
      </div>
    </div>
  </div>

  <%# Section 2: Phân loại %>
  <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
    <div class="bg-gradient-to-r from-gray-50 to-white px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 flex items-center">
        <i class="fa-solid fa-tags text-brand-orange mr-2"></i>
        Phân loại
      </h3>
    </div>
    
    <div class="p-6">
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <%# Loại nhu cầu %>
        <div>
          <%= f.label :service_type_id, "Loại nhu cầu *", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
          <%= f.collection_select :service_type_id, @service_types, :id, :name,
              { prompt: "-- Chọn loại nhu cầu --" },
              { class: "w-full", data: { controller: "tom-select", tom_select_placeholder_value: "Tìm và chọn loại nhu cầu..." } } %>
        </div>

        <%# Nguồn khách %>
        <div>
          <%= f.label :source_id, "Nguồn khách hàng *", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
          <%= f.collection_select :source_id, Source.for_dropdown, :id, :name,
              { include_blank: "-- Chọn nguồn --" },
              { class: "w-full", data: { controller: "tom-select", tom_select_placeholder_value: "Tìm và chọn nguồn..." } } %>
        </div>

        <% if @contact.persisted? %>
          <%# Trạng thái - Chỉ hiển thị khi edit %>
          <div>
            <%= f.label :status, "Trạng thái", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fa-solid fa-flag text-gray-400"></i>
              </div>
              <%= f.select :status, 
                  Contact.statuses.keys.map { |s| [t("contacts.status.#{s}"), s] },
                  {},
                  { class: "w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue outline-none bg-white transition-colors cursor-pointer appearance-none" } %>
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                <i class="fa-solid fa-chevron-down text-gray-400 text-xs"></i>
              </div>
            </div>
          </div>

          <%# Người phụ trách %>
          <div>
            <%= f.label :assigned_user_id, "Người phụ trách", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
            <%= f.collection_select :assigned_user_id, User.active.order(:name), :id, :name,
                { include_blank: "-- Chưa gán --" },
                { class: "w-full", data: { controller: "tom-select", tom_select_placeholder_value: "Tìm và chọn người phụ trách..." } } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%# Section 3: Ghi chú %>
  <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
    <div class="bg-gradient-to-r from-gray-50 to-white px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 flex items-center">
        <i class="fa-solid fa-sticky-note text-green-600 mr-2"></i>
        Ghi chú
      </h3>
    </div>
    
    <div class="p-6">
      <%= f.label :notes, "Ghi chú", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
      <div class="relative">
        <div class="absolute top-3 left-3 pointer-events-none">
          <i class="fa-solid fa-align-left text-gray-400"></i>
        </div>
        <%= f.text_area :notes, 
            rows: 4,
            class: "w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-brand-blue outline-none transition-colors resize-none",
            placeholder: "Thông tin thêm về khách hàng..." %>
      </div>
    </div>
  </div>

  <%# Actions - Centered, consistent button sizing %>
  <div class="flex items-center justify-center gap-4 pt-2">
    <%= link_to contacts_path, class: "inline-flex items-center px-6 py-2.5 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 font-medium transition-colors" do %>
      <i class="fa-solid fa-times mr-2"></i>
      Hủy bỏ
    <% end %>
    <button type="submit" class="inline-flex items-center px-8 py-2.5 bg-brand-blue text-white rounded-lg hover:bg-blue-900 font-medium shadow-lg shadow-blue-500/30 transition-all cursor-pointer">
      <i class="fa-solid fa-save mr-2"></i>
      <%= @contact.persisted? ? "Lưu thay đổi" : "Tạo khách hàng" %>
    </button>
  </div>
<% end %>
