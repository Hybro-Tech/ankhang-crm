<%# Province form partial - Full width, UI/UX Pro Max %>
<%= form_with model: @province, local: true, class: "w-full" do |f| %>
  <% if @province.errors.any? %>
    <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 rounded-r-lg">
      <div class="flex items-center text-red-800">
        <i class="fa-solid fa-exclamation-triangle mr-2"></i>
        <span class="font-semibold">Có <%= @province.errors.count %> lỗi cần sửa:</span>
      </div>
      <ul class="mt-2 text-sm text-red-700 list-disc list-inside ml-6">
        <% @province.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Main form card - Full width %>
  <div class="w-full bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="px-4 sm:px-6 lg:px-8 py-4 border-b border-gray-100 bg-gradient-to-r from-blue-50 to-white">
      <div class="flex items-center">
        <div class="w-10 h-10 rounded-lg bg-brand-blue/10 flex items-center justify-center mr-4">
          <i class="fa-solid fa-map-pin text-brand-blue text-lg"></i>
        </div>
        <div>
          <h3 class="text-lg font-bold text-gray-900">Thông tin tỉnh/thành</h3>
          <p class="text-sm text-gray-500">Quản lý thông tin tỉnh/thành phố</p>
        </div>
      </div>
    </div>
    
    <div class="px-4 sm:px-6 lg:px-8 py-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <%# Name - Full width on mobile %>
        <div>
          <label for="province_name" class="block text-sm font-medium text-gray-700 mb-2">
            Tên tỉnh/thành <span class="text-red-500">*</span>
          </label>
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
              <i class="fa-solid fa-tag text-sm"></i>
            </span>
            <%= f.text_field :name, 
                id: "province_name",
                class: "w-full border border-gray-300 rounded-lg pl-11 pr-4 py-3 focus:ring-2 focus:ring-brand-blue focus:border-brand-blue outline-none transition-all text-base", 
                placeholder: "VD: Hà Nội, Hồ Chí Minh" %>
          </div>
        </div>

        <%# Code - Auto-generated readonly %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Mã tỉnh <span class="text-gray-400 text-xs font-normal">(tự động)</span>
          </label>
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
              <i class="fa-solid fa-code text-sm"></i>
            </span>
            <% if @province.persisted? && @province.code.present? %>
              <div class="w-full border border-gray-200 rounded-lg pl-11 pr-4 py-3 bg-gray-50 text-gray-600 font-mono text-base">
                <%= @province.code %>
              </div>
            <% else %>
              <div class="w-full border border-gray-200 rounded-lg pl-11 pr-4 py-3 bg-gray-50 text-gray-400 italic text-base">
                Tự động tạo khi lưu
              </div>
            <% end %>
          </div>
          <p class="text-xs text-gray-400 mt-1.5 flex items-center">
            <i class="fa-solid fa-magic mr-1"></i>
            Được tạo tự động từ tên tỉnh/thành
          </p>
        </div>


        <%# Position %>
        <div>
          <label for="province_position" class="block text-sm font-medium text-gray-700 mb-2">
            Thứ tự hiển thị
          </label>
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
              <i class="fa-solid fa-sort text-sm"></i>
            </span>
            <%= f.number_field :position, 
                id: "province_position",
                class: "w-full border border-gray-300 rounded-lg pl-11 pr-4 py-3 focus:ring-2 focus:ring-brand-blue focus:border-brand-blue outline-none transition-all text-base", 
                min: 0,
                placeholder: "0" %>
          </div>
          <p class="text-xs text-gray-400 mt-1.5">Số nhỏ hơn sẽ hiển thị trước</p>
        </div>

        <%# Active - Toggle style %>
        <div class="flex items-center">
          <div class="bg-gray-50 rounded-xl p-5 w-full flex items-center justify-between border border-gray-100">
            <div>
              <label for="province_active" class="text-sm font-semibold text-gray-900 cursor-pointer">
                Trạng thái hoạt động
              </label>
              <p class="text-xs text-gray-500 mt-1">Bỏ chọn để ẩn tỉnh/thành</p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
              <%= f.check_box :active, class: "sr-only peer", id: "province_active" %>
              <div class="w-11 h-6 bg-gray-300 rounded-full peer peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-100 peer-checked:bg-brand-blue after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:after:translate-x-5 peer-checked:after:border-white"></div>
            </label>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Actions - Full width, centered %>
  <div class="flex items-center justify-center gap-4 pt-8 mt-8 border-t border-gray-200">
    <%= link_to provinces_path, class: "inline-flex items-center px-8 py-3 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 font-medium transition-all cursor-pointer" do %>
      <i class="fa-solid fa-arrow-left mr-2"></i>
      Quay lại
    <% end %>
    <button type="submit" class="inline-flex items-center px-8 py-3 bg-brand-blue text-white rounded-lg hover:bg-blue-900 font-medium shadow-lg shadow-blue-500/30 transition-all cursor-pointer">
      <i class="fa-solid fa-check mr-2"></i>
      <%= @province.new_record? ? "Tạo tỉnh/thành" : "Lưu thay đổi" %>
    </button>
  </div>
<% end %>
