<%# Province form partial - Matching system forms style %>
<%= form_with model: @province, local: true, class: "w-full" do |f| %>
  <% if @province.errors.any? %>
    <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 rounded-r-lg">
      <div class="flex items-center text-red-800">
        <i class="fa-solid fa-exclamation-triangle mr-2"></i>
        <span class="font-semibold">Có <%= @province.errors.count %> lỗi cần sửa:</span>
      </div>
      <ul class="mt-2 text-sm text-red-700 list-disc list-inside ml-6">
        <% @province.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Main form card %>
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="px-5 py-4 border-b border-gray-100 bg-gradient-to-r from-blue-50 to-white">
      <div class="flex items-center">
        <div class="w-8 h-8 rounded-lg bg-brand-blue/10 flex items-center justify-center mr-3">
          <i class="fa-solid fa-map-pin text-brand-blue"></i>
        </div>
        <div>
          <h3 class="font-bold text-gray-900">Thông tin tỉnh/thành</h3>
          <p class="text-xs text-gray-500">Quản lý thông tin tỉnh/thành phố</p>
        </div>
      </div>
    </div>
    
    <div class="p-5">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
        <%# Name %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1.5">
            Tên tỉnh/thành <span class="text-red-500">*</span>
          </label>
          <%= f.text_field :name, 
              class: "w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-brand-blue focus:border-brand-blue outline-none transition-colors", 
              placeholder: "VD: Hà Nội, Hồ Chí Minh" %>
        </div>

        <%# Code %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1.5">
            Mã tỉnh <span class="text-red-500">*</span>
          </label>
          <%= f.text_field :code, 
              class: "w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-brand-blue focus:border-brand-blue outline-none transition-colors font-mono", 
              placeholder: "VD: 01, 79" %>
          <p class="text-xs text-gray-400 mt-1">Mã tỉnh theo chuẩn quốc gia</p>
        </div>

        <%# Position %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1.5">
            Thứ tự hiển thị
          </label>
          <%= f.number_field :position, 
              class: "w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-brand-blue focus:border-brand-blue outline-none transition-colors", 
              min: 0,
              placeholder: "0" %>
          <p class="text-xs text-gray-400 mt-1">Số nhỏ hơn sẽ hiển thị trước</p>
        </div>

        <%# Active - Toggle style %>
        <div class="flex items-center">
          <div class="bg-gray-50 rounded-lg p-4 w-full flex items-center justify-between">
            <div>
              <%= f.label :active, "Trạng thái hoạt động", class: "text-sm font-medium text-gray-900 cursor-pointer" %>
              <p class="text-xs text-gray-500 mt-0.5">Bỏ chọn để ẩn tỉnh/thành</p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
              <%= f.check_box :active, class: "sr-only peer" %>
              <div class="w-11 h-6 bg-gray-300 rounded-full peer peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-100 peer-checked:bg-brand-blue after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:after:translate-x-5 peer-checked:after:border-white"></div>
            </label>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Actions - Centered %>
  <div class="flex items-center justify-center space-x-4 pt-8 mt-8 border-t border-gray-200">
    <%= link_to provinces_path, class: "px-8 py-2.5 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-medium transition-colors cursor-pointer" do %>
      Hủy bỏ
    <% end %>
    <button type="submit" class="px-8 py-2.5 bg-brand-blue text-white rounded-lg hover:bg-blue-900 font-medium shadow-lg shadow-blue-500/30 flex items-center transition-colors cursor-pointer">
      <i class="fa-solid fa-check mr-2"></i>
      <%= @province.new_record? ? "Tạo tỉnh/thành" : "Lưu thay đổi" %>
    </button>
  </div>
<% end %>
