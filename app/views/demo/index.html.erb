<% page_title "Demo UI Components" %>

<%# Page Header %>
<div class="sm:flex sm:items-center sm:justify-between mb-8">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Demo UI Components</h1>
    <p class="mt-1 text-sm text-gray-500">Trang demo các thành phần UI cơ bản của AnKhangCRM.</p>
  </div>
  <div class="mt-4 sm:mt-0 flex space-x-3">
    <%= link_to demo_path(flash: "success"), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
      <i class="fa-solid fa-check mr-2 text-green-500"></i> Flash Success
    <% end %>
    <%= link_to demo_path(flash: "error"), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
      <i class="fa-solid fa-xmark mr-2 text-red-500"></i> Flash Error
    <% end %>
  </div>
</div>

