<%# Buttons Demo %>
<div class="bg-white shadow-sm rounded-xl border border-gray-100 p-6 mb-8">
  <h2 class="text-lg font-semibold text-gray-900 mb-4">Buttons</h2>
  <div class="flex flex-wrap gap-3">
    <button class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-brand-blue hover:bg-brand-blue-dark shadow-sm">
      <i class="fa-solid fa-plus mr-2"></i> Primary Button
    </button>
    <button class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
      <i class="fa-solid fa-pencil mr-2"></i> Secondary Button
    </button>
    <button class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-brand-red hover:bg-red-700 shadow-sm">
      <i class="fa-solid fa-trash mr-2"></i> Danger Button
    </button>
    <button class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-brand-orange hover:bg-orange-600 shadow-sm">
      <i class="fa-solid fa-star mr-2"></i> Accent Button
    </button>
  </div>
</div>

