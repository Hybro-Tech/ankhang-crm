<%# Sources Index %>
<% content_for :page_title, "Quản lý Nguồn khách hàng" %>

<div class="flex flex-col gap-6">
  <%# Header %>
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Quản lý Nguồn khách hàng</h1>
      <p class="text-sm text-gray-500 mt-1">Danh sách các kênh nguồn tiếp nhận khách hàng</p>
    </div>
    <%= link_to new_source_path, class: "inline-flex items-center gap-2 bg-brand-blue hover:bg-blue-800 text-white px-4 py-2.5 rounded-lg font-medium transition-colors shadow-sm" do %>
      <i class="fa-solid fa-plus"></i>
      <span>Thêm nguồn mới</span>
    <% end %>
  </div>

  <%# Table %>
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">STT</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Tên nguồn</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Mô tả</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Trạng thái</th>
            <th class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">Thao tác</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @sources.any? %>
            <% @sources.each do |source| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= source.position %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= source.name %></div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-600 max-w-xs truncate"><%= source.description %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if source.active? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Đang dùng
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                      Ẩn
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                  <div class="flex items-center justify-end gap-2">
                    <%= link_to edit_source_path(source), class: "text-brand-blue hover:text-blue-900" do %>
                      <i class="fa-solid fa-pen-to-square"></i>
                    <% end %>
                    <% if source.contacts.empty? %>
                      <%= link_to source, method: :delete, data: { confirm: "Bạn có chắc muốn xóa?" }, class: "text-red-600 hover:text-red-900" do %>
                        <i class="fa-solid fa-trash"></i>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="px-6 py-12 text-center">
                <div class="flex flex-col items-center gap-2">
                  <i class="fa-solid fa-share-nodes text-4xl text-gray-300"></i>
                  <p class="text-gray-500">Chưa có nguồn khách hàng nào</p>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% if @sources.respond_to?(:total_pages) %>
      <%= render "shared/pagination", collection: @sources, entry_name: "nguồn khách hàng" %>
    <% end %>
  </div>
</div>
