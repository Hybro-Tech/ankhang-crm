<%# TASK-013: Forgot Password page based on mockup docs/ui-design/wireframes/forgot_password.html %>
<% content_for :title, "Quên mật khẩu" %>

<div class="w-full max-w-md">
  <%# Logo %>
  <div class="text-center mb-8">
    <div class="inline-flex items-center justify-center bg-white/10 backdrop-blur-sm rounded-2xl p-4 mb-4 shadow-sm">
      <i class="fa-solid fa-scale-balanced text-[#0B387A] text-4xl"></i>
    </div>
    <h1 class="text-3xl font-bold text-[#0B387A] tracking-wide">AnKhangCRM</h1>
    <p class="text-blue-600/80 mt-2">Hệ thống quản lý khách hàng</p>
  </div>

  <%# Forgot Password Card %>
  <div class="bg-white rounded-2xl shadow-2xl p-8 border border-gray-100">
    <div class="text-center mb-6">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-50 rounded-full mb-4">
        <i class="fa-solid fa-envelope text-[#0B387A] text-2xl"></i>
      </div>
      <h2 class="text-2xl font-bold text-gray-800">Quên mật khẩu?</h2>
      <p class="text-gray-500 mt-2 text-sm">Nhập email của bạn, chúng tôi sẽ gửi link đặt lại mật khẩu</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-5" }) do |f| %>
      <%# Error messages %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%# Email %>
      <div>
        <%= f.label :email, "Email đăng ký", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i class="fa-solid fa-envelope text-gray-400"></i>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@congty.com",
              class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0B387A] focus:border-[#0B387A] transition-colors outline-none" %>
        </div>
      </div>

      <%# Submit Button %>
      <%= f.button type: "submit", class: "w-full bg-[#0B387A] text-white py-3 rounded-lg font-semibold hover:bg-blue-900 transition-colors shadow-lg shadow-blue-500/30 flex items-center justify-center cursor-pointer" do %>
        <i class="fa-solid fa-paper-plane mr-2"></i>
        <span>Gửi link đặt lại mật khẩu</span>
      <% end %>
    <% end %>

    <%# Back to Login %>
    <div class="mt-6 text-center">
      <%= link_to new_session_path(resource_name), class: "text-[#0B387A] hover:text-blue-900 text-sm font-medium inline-flex items-center" do %>
        <i class="fa-solid fa-arrow-left mr-2"></i>
        <span>Quay lại Đăng nhập</span>
      <% end %>
    </div>
  </div>

  <%# Footer %>
  <p class="text-center text-gray-500 text-sm mt-6">
    © 2026 AnKhangCRM. All rights reserved.
  </p>
</div>
